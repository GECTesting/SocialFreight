<div id="setup_address">

  <div class="row-fluid">
    <ul class="breadcrumb">
      <li><a href="#">Adress Bilgileri</a><span class="divider">>></span></li>
      <li><a href="#">Şube Bilgileri</a><span class="divider">>></span></li>
      <li class="active">Kullanıcı Bilgileri</li>
    </ul>
  </div>

  <div id="opform">
    <%= simple_form_for @patron, url: wizard_path, method: :put, validate: true, html: { class: "form-horizontal" } do |f| %>
      <%= f.error_notification %>
      <%= f.error :base %>

      <div class="pageBlock">
     
        <!--div class="tabbable tabs-below"-->
        <div class="row-fluid">

          <div class="page-header">
            <h4>Kullanıcı Bilgileri</h4>
          </div>

          <div class="row-fluid">
            <fieldset>
              <%= f.simple_fields_for :users do |cf| %>
                <% if cf.object.new_record? %>
                  <%= render 'user_fields', :f => cf %>
                <%# else %>
                <%#= render 'users/user', :user => cf.object %>
                <% end %>
              <% end %>
              <%= link_to_add_fields "Yeni Kullanıcı Ekle", f, :users %>
            </fieldset>
          </div>
          <div class="form-actions">
            <%= link_to "Bu Adımı Atla >>", next_wizard_path, :class => 'btn pull-right' %>
            <%= f.button :submit, "Kullanıcı Bilgilerini Kaydet >>", :class => 'btn btn-info' %>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>