<div id="payoff_form" class="row-fluid">
  <%= simple_form_for @payoff, validate: true, html: { class: "form-horizontal" } do |f| %>
    <%= f.error_notification %>
  
    <div class="pageBlock">
    <%= render 'shared/form_buttonsh', :f => f, :header => "New Driver Settlement" %>  
    <fieldset>

      <div class="row-fluid">
        <div class="span4">
          <%= f.input :staff_id, as: :hidden, label: "Sürücü/Personel", input_html: { class: "chosen_input", "data-url" => "/people.json", "data-newrecurl" => "/people/new", "data-placeholder" => "Sürücü/Personel Seçiniz."} %>
        </div>
        <div class="span4">
          <%= f.input :truck do %>
            <%= f.input_field :truck, class: "input-date", placeholder: "Truck" %>
            <%= f.input_field :vehicle, class: "input-date", placeholder: "Vehicle" %>
          <% end %>
        </div>
        <div class="span4">
          <%= f.input :voyage, placeholder: "Truck Voyage Number" %>
        </div>
        <!--div class="span3">
          <%#= f.input :payoff_type, as: :select %>
        </div>
        <div class="span3">
          <%#= f.input :payoff_date, as: :string, input_html: { class: "input-small", "data-datepicker" => "datepicker" } %>
        </div-->
      </div>

      <div class="row-fluid">
        <div class="span4">
          <%= f.input :departure_date, label: "Departure Details" do %>
            <%= f.input_field :departure_date, as: :string, class: "input-mini", placeholder: "Date", "data-datepicker" => "datepicker" %>
            <%= f.input_field :departure_km, class: "input-mini", placeholder: "Kilometer" %>
            <%= f.input_field :departure_place, class: "input-small", placeholder: "Place" %>
          <% end %>
        </div>
        <div class="span4">
          <%= f.input :arrival_date, label: "Arrival Details" do %>
            <%= f.input_field :arrival_date, as: :string, class: "input-mini", placeholder: "Date", "data-datepicker" => "datepicker" %>
            <%= f.input_field :arrival_km, class: "input-mini", placeholder: "Km" %>
            <%= f.input_field :arrival_place, class: "input-small", placeholder: "Place" %>
          <% end %>
        </div>
        <div class="span4">
          <%= f.input :return_date, label: "Return Details" do %>
            <%= f.input_field :return_date, as: :string, class: "input-mini", placeholder: "Date", "data-datepicker" => "datepicker" %>
            <%= f.input_field :return_km, class: "input-mini", placeholder: "Km" %>
            <%= f.input_field :return_place, class: "input-small", placeholder: "Place" %>
          <% end %>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span12">
          <%= f.input :notes, input_html: { rows: 1, class: "span6" } %>
        </div>
      </div>
      <%= f.input :transport_id, as: :hidden %>
      <%= f.input :payoff_type, as: :hidden %>
      <%= f.input :payoff_date, as: :hidden %>
    </fieldset>
    </div>
    <%= f.button :submit %>
  <% end %>
</div>