<div id="feedback_form" class="modal">
  <%= simple_form_for @feedback, validate: true, html: { class: "form-horizontal" }, remote: true do |f| %>
    <%= f.error_notification %>

    <div class="pageBlock">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
        <h4><%= t("companies.title.quick_company") %></h4>
      </div>

      <div class="modal-body">
        <fieldset>
          <legend>Bize Yazın</legend>
          <div class="row">
            <%= f.input :name, placeholder: "Adınız" %>
            <%= f.input :email, placeholder: "Mail Adresiniz" %>
            <%= f.input :msg, as: :text, placeholder: "Mesajınız" %>
          </div>
        </fieldset>
      </div>

      <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal" aria-hidden="true"><%= t("defaults.action.close") %></a>
        <%= f.submit "Gönder", class: 'btn btn-success' %>
      </div>

    </div>
  
  <% end %>
</div>
<script type="text/javascript">$("#new_feedback").validate();</script>