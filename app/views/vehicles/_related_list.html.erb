<%= table_for objects, table_html: { id: "vehicle_report_results", class: "table table-condensed table-striped table-fixed"}, 
              header_row_html: { class: "headerRow" },
              row_html: { class: "dataRow" } do |table| %>
  <% table.column :code, label: t("Plaka"), column_html: { scope: "col" } do |vehicle| %>
    <%= link_to vehicle.code, vehicle_path(vehicle) %>
  <% end %>
  <% table.column :vehicle_class, label: "Sınıfı", column_html: { scope: "col" } %>
  <% table.column :vehicle_type, label: "Tipi", column_html: { scope: "col" } %>
  <% table.column :brand, label: "Brand", column_html: { scope: "col" } %>
  <% table.column :model, label: "Model", column_html: { scope: "col" } %>
  <% table.column :model_year, label: "Year", column_html: { scope: "col" } %>
  <% table.column :action, label: false, column_html: { class: "actionCol", scope: "col" } do |vehicle| %>
    <%= link_to edit_vehicle_path(vehicle) do %><i class="icon-edit"></i><% end %>            
  <% end %>
<% end %>