<div id="person_form" class="row-fluid">
<%= simple_form_for @vehicle, validate: true, html: { class: "form-horizontal" } do |f| %>
  <%= f.error_notification %>

  <fieldset>
    <div class="page-header">
      <h4>New Vehicle</h4>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <%= f.input :code, label: "Plaka" %>
        <%= f.input :vehicle_class, as: :select, collection: Nimbos::Listitem.truckclass.map { |t| [t.name, t.code] } %>
        <%= f.input :vehicle_type %>
      </div>
      <div class="span6">
        <%= f.input :brand, label: "Brand" %>
        <%= f.input :model, label: "Model/Year" do %>
          <%= f.input_field :model, class: "input-small" %>
          <%= f.input_field :model_year, class: "input-small" %>
        <% end %>
        <%= f.input :vehicle_status, as: :select, collection: Nimbos::Listitem.truckstatus.map { |t| [t.name, t.code] } %>
      </div>
    </div>

    <div class="page-header">
      <h5>Ek Bilgiler</h5>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <%= f.input :motor_number %>
        <%= f.input :vehicle_price do %>
          <%= f.input_field :vehicle_price, class: "input-small" %>
          <%= f.input_field :price_curr, as: :select, collection: Nimbos::Currency.all, class: "input-small" %>
        <% end %>
        <%#= f.input :sat_no %>
        <%#= f.input :tire_size %>
      </div>
      <div class="span6">
        <%= f.input :fuel_type, as: :select, collection: Nimbos::Listitem.fueltypes.map { |t| [t.name, t.code] } %>
        <%= f.input :notes, as: :text, input_html: { rows: 2} %>
        <%#= f.input :fuel_capacity do %>
          <%#= f.input_field :fuel_capacity,  class: "input-small" %>
          <%#= f.input_field :fuel_capacity2, class: "input-small" %>
        <%# end %>
        <%#= f.input :barcode %>
        <%#= f.input :link_type %>
      </div>
    </div>
  </fieldset>
    <div class="form-actions">
          <%= f.button :submit, class: 'btn btn-success' %>
        </div>
<% end %>
</div>