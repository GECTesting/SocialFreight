<div id="opform" class="row">
<%= simple_form_for @position, :validate => true do |f| %>
  <%= f.error_notification %>

  <fieldset>
    <div class="row">
      <div class="page-header span16 columns">
        <h4><%= @position.operation.humanize %> Position</h4>
      </div>
      <div class="span8 columns">
        <%= f.hidden_field :operation %>
        <%= f.input :direction do %>
          <%= f.input_field :direction, :as => :select, :collection => Position.direction_types.map { |r| [r[1], r[0] ] }, :include_blank => false, :class => "small" %>
          <%= f.input_field :paid_at, :as => :select, :collection => Position.payment_types.map { |r| [r[1], r[0] ] }, :include_blank => false, :class => "medium" %>
          <%#= f.input_field :load_type, :as => :select, :collection => Position.load_types.map { |r| [I18n.t("position.#{@position.operation}.listitem.#{r[1]}"), r[0] ] }, :include_blank => false %>
        <% end %>
        <%= f.input :master_reference, :label => I18n.t("position.#{@position.operation}.label.masterno") %>
      </div>
      <div class="span8 columns">
        <%= f.input :branch do %>
          <%= f.input_field :branch, :as => :select, :collection => current_patron.branches, :include_blank => false, :class => "medium" %>
        <% end %>
        <%= f.input :master_date, :label => I18n.t("position.#{@position.operation}.label.masterdate") do %>
          <%= f.input_field :master_date, :class => "small", "data-datepicker" => "datepicker" %>
          <%= f.input_field :master_type, :as => :select, :collection => Position.master_types.map { |r| [r[1], r[0] ] }, :include_blank => false, :class => "medium" %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="page-header span16 columns">
        <h4></h4>
      </div>
      <div class="span8 columns">
        <%= f.input :transporter, :label => I18n.t("position.#{@position.operation}.label.transporter"), :input_html => {:class => "token_input", "data-url" => "/companies.json", "data-pre" => @position.transporter ? @position.transporter.prepopulate_tokens.to_json : nil } %>
        <%= f.input :supplier, :label => I18n.t("position.#{@position.operation}.label.supplier"), :input_html => {:class => "token_input", "data-url" => "/companies.json", "data-pre" => @position.forwarder ? @position.forwarder.prepopulate_tokens.to_json : nil } %>
        <%= f.input :agent, :label => I18n.t("position.#{@position.operation}.label.agent"), :input_html => {:class => "token_input", "data-url" => "/companies.json", "data-pre" => @position.agent ? @position.agent.prepopulate_tokens.to_json : nil }  %>
        <%= f.input :freight_price do %>
          <%= f.input_field :freight_price, :class => "small" %>
          <%= f.input_field :freight_curr, :as => :select, :collection => Currency.all, :include_blank => false, :class => "medium" %>
        <% end %>
        <%= f.input :agent_price do %>
          <%= f.input_field :agent_price, :class => "small" %>
          <%= f.input_field :agent_curr, :as => :select, :collection => Currency.all, :include_blank => false, :class => "medium" %>
        <% end %>
      </div>
      <div class="span8 columns">
        <%= f.input :load_place, :label => I18n.t("position.#{@position.operation}.label.load_place"), :input_html => {:class => "token_input", "data-url" => "/places.json", "data-pre" => @position.load_place ? @position.load_place.prepopulate_tokens.to_json : nil} %>
        <%= f.input :unload_place, :label => I18n.t("position.#{@position.operation}.label.unload_place"), :input_html => {:class => "token_input", "data-url" => "/places.json", "data-pre" => @position.unload_place ? @position.unload_place.prepopulate_tokens.to_json : nil} %>
        <%= f.input :load_date, :label => "Departure Date", :input_html => {:class => "small", "data-datepicker" => "datepicker"} %>
        <%= f.input :unload_date, :label => "Arrival Date", :input_html => {:class => "small", "data-datepicker" => "datepicker"} %>
        <%= f.input :agent_reference, :label => "References" do %>
          <%= f.input_field :agent_reference, :class => "medium", :placeholder => I18n.t("position.#{@position.operation}.label.agentref") %>
          <%= f.input_field :other_reference, :class => "medium", :placeholder => I18n.t("position.#{@position.operation}.label.linerref") %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <%= render :partial => "#{@position.operation}_detail", :locals => {:f => f} %>
    </div>

    <div class="row">
      <div class="page-header span16 columns">
        <h4></h4>
      </div>
      <div class="span8 columns">
        <%= f.input :description, :as => :text, :input_html => {:rows => 2, :cols => 37}, :label => "Notes" %>
      </div>
      <div class="span8 columns">
        <%= f.input :contract_no, :input_html => {:class => "medium"} %>
        <%= f.input :stage do %>
          <%= f.input_field :stage, :class => "medium", :as => :select, :collection => Position.stages.map { |r| [r[1], r[0] ] }, :include_blank => false %>
          <%= f.input_field :stage_date, :class => "small datepicker" %>
        <% end %>
        <div class="clearfix" style="margin-left:250px">
          <%= f.button :submit, :class => 'btn primary' %>
        </div>
      </div>
    </div>
  </fieldset>

<% end %>
</div>
