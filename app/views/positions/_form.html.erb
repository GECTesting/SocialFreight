<div id="opform">
<%= simple_form_for @position, :html => {:class => 'form-horizontal'}, :validate => true do |f| %>
  <%= f.error_notification %>
  <div class="row-fluid">
    <%= f.error :base %>
  </div>
  <fieldset>

  <div class="pageBlock">

    <div class="page-header">
      <h4><%= t("positions.title.new_position") %><small> <%= t("operations.title.#{@position.operation}operation") %></small></h4>
    </div>
    <%#= render 'shared/form_header', message: "Yeni Taşıma Projesi" %>
 
    <%= f.hidden_field :operation %>
    <legend><%= t("positions.title.position_info") %></legend>

    <div class="row-fluid">
      <div class="span6">
        <%= f.input :description, input_html: { class: "span12" }, label: t("positions.label.description"), placeholder: t("positions.placeholder.description") %>
        <%#= f.input :direction, as: :select, collection: Position.direction_types.map { |r| [r[1], r[0] ] }, label: t("positions.label.direction") %>
      </div>
      <div class="span6">
        <%= f.input :branch_id, as: :select, collection: current_patron.branches,selected: current_user.branch_id, label: t("positions.label.branch") %>
        <%= f.input :notes, as: :text, input_html: { rows: "2" }, label: t("positions.label.notes") %>
      </div>
    </div>
    <div class="row-fluid" style="display:none">
      <%= f.hidden_field :operation %>
      <%= f.hidden_field :direction %>
      <%#= f.fields_for :transports do |builder| %>
        <%#= render "transports/form_#{@position.operation}", :f => builder %>
      <%# end %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, t("positions.action.create"), :class => 'btn btn-info' %>
      <a href="" class="btn"><%= t("defaults.link.cancel") %></a>
    </div>
    <div class="row-fluid">
      <p class="alert alert-info">*<%= t("positions.message.next_step") %></p>
    </div>
  </div>

  </fieldset>
<% end %>
</div>
