<div id="quick-profile" class="position">
  <div>
    <table style="width:100%" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td><h4><%= @position.reference.upcase %></h4></td>
        <td colspan="4"><%= render 'tab_header', :position => @position %></td>
      </tr>
      <tr>
        <td class="labelCol2">Konşimento No:</td>
        <td class="dataCol2"><%= @position.waybill_no %></td>
        <td class="labelCol2">Konşimento Tarihi:</td>
        <td class="dataCol2"><%= @position.waybill_date %></td>
        <td class="dataCol2 lastCol">Kayıt Sahibi:<%= @position.user %></td>
      </tr>
      <tr>
        <td class="labelCol2"></td>
        <td class="dataCol2 lastCol"></td>
        <td class="labelCol2"></td>
        <td class="dataCol2"></td>
        <td class="dataCol2 lastCol">Kayıt Zamanı:<%= @position.created_at.strftime("%d/%m/%Y %H:%M") %></td>
      </tr>
    </table>
  </div>
</div>
