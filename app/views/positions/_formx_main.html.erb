<div class="row-fluid">
  <div class="span6">
    <fieldset>
      <%= f.hidden_field :operation %>
      <%= f.input :direction do %>
        <%= f.input_field :direction, :as => :select, :collection => Position.direction_types.map { |r| [r[1], r[0] ] }, :include_blank => false, :class => "input-small" %>
        <%= f.input_field :paid_at, :as => :select, :collection => Position.payment_types.map { |r| [r[1], r[0] ] }, :include_blank => false, :class => "input-small" %>
        <%#= f.input_field :load_type, :as => :select, :collection => Position.load_types.map { |r| [I18n.t("position.#{@position.operation}.listitem.#{r[1]}"), r[0] ] }, :include_blank => false %>
      <% end %>
      <%= f.input :branch_id, :as => :select, :collection => current_patron.branches, :include_blank => false %>
      <%= f.input :load_place_id, :as => :select, :collection => [[@position.load_place_id ? @position.load_place.name : "", @position.load_place_id]], :label => I18n.t("position.#{@position.operation}.label.load_place"), :input_html => {:class => "chosen_input", "data-url" => "/places.json"} %>
      <%= f.input :load_date, :as => "string", hint: "First Departure Date", :input_html => {:class => "input-small", "data-datepicker" => "datepicker"}, :label => "Departure Date" %>
      <%= f.input :unload_place_id, :as => :select, :collection => [[@position.unload_place_id ? @position.unload_place.name : "", @position.unload_place_id]], :label => I18n.t("position.#{@position.operation}.label.unload_place"), :input_html => {:class => "chosen_input", "data-url" => "/places.json"} %>
      <%= f.input :unload_date, :as => "string", hint: "Final Arrival Date", :input_html => {:class => "input-small", "data-datepicker" => "datepicker"}, :label => "Arrival Date" %>
    </fieldset>
  </div>
  <div class="span6">
    <fieldset>
      <%= f.input :freight_price do %>
        <%= f.input_field :freight_price, :class => "input-small" %>
        <%= f.input_field :freight_curr, :as => :select, :collection => Currency.all, :include_blank => false, :class => "input-small" %>
      <% end %>
      <%= f.input :agent_id, :as => :select, :collection => [[@position.agent_id ? @position.agent.name : "", @position.agent_id]], :label => I18n.t("position.#{@position.operation}.label.agent"), :input_html => {:class => "chosen_input", "data-url" => "/companies.json" }  %>
      <%= f.input :agent_price do %>
        <%= f.input_field :agent_price, :class => "input-small" %>
        <%= f.input_field :agent_curr, :as => :select, :collection => Currency.all, :include_blank => false, :class => "input-small" %>
      <% end %>
      <%= f.input :notes, :as => :text, :input_html => {:rows => 1, :cols => 37}, :label => "Notes" %>
      <%= f.input :stage do %>
        <%= f.input_field :stage, :class => "input-medium", :as => :select, :collection => Position.stages.map { |r| [r[1], r[0] ] }, :include_blank => false %>
        <%= f.input_field :stage_date, :as => "string", :class => "input-small", "data-datepicker" => "datepicker" %>
      <% end %>
    </fieldset>
  </div>
</div>
