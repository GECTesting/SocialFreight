<div id="opform">
  <%= simple_form_for [@position, @transnode], :validate => true do |f| %>
  <%= f.error_notification %>
  <%= f.error :base, :error_method => :to_sentence %>
  <fieldset>

  <div class="pageBlock">
    <%= render 'shared/form_buttonsh', :f => f %>
 
    <!--div class="tabbable tabs-below"-->
    <div>

      <div id="my-tab-content" class="tab-content">
        <div id="transnode-main-form" class="tab-pane active">
          <%= render "form_#{@transnode.trans_method}", :f => f %>
        </div>

      </div>

    </div>
  </div>

  </fieldset>
<% end %>
</div>
