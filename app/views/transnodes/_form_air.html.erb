<legend>Uçak Bilgileri</legend>
<div class="row-fluid">
  <div class="span6">
      <%= f.input :vessel, :label => "Plane & Voyage No", hint: "Plane Name & Voyage Number" do %>
        <%= f.input_field :vessel, :class => "input-small" %>
        <%= f.input_field :voyage, :class => "input-small" %>
      <% end %>
      <%= f.input :departure_place, :class => "input-small", hint: "Departure airport" %>
      <%= f.input :departure_date, :as => "string", :input_html => {:class => "input-small", "data-datepicker" => "datepicker"} %>

      <%= f.input :arrival_place, :class => "input-small", hint: "Final Arrival airport" %>
      <%= f.input :arrival_date, :as => "string", :input_html => {:class => "input-small", "data-datepicker" => "datepicker"} %>
      <%= f.input :trans_method, :as => :hidden %>
      <%= f.input :fromwhere, :as => :hidden %>
  </div>
  <div class="span6">
      <%= f.input :transporter_id, :as => :select, :collection => [[@transnode.transporter_id ? @transnode.transporter.name : "", @transnode.transporter_id]], :label => I18n.t("position.#{@transnode.trans_method}.label.transporter"), :input_html => {:class => "chosen_input", "data-url" => "/companies.json" }, hint: "Airline Company" %>
      <%= f.input :supplier_id, :as => :select, :collection => [[@transnode.supplier_id ? @transnode.supplier.name : "", @transnode.supplier_id]], :label => I18n.t("position.#{@transnode.trans_method}.label.supplier"), :input_html => {:class => "chosen_input", "data-url" => "/companies.json" }, hint: "Liner Agent" %>
      <%= f.input :freight_price do %>
        <%= f.input_field :freight_price, :class => "input-small" %>
        <%= f.input_field :freight_curr, :as => :select, :collection => Nimbos::Currency.all, :include_blank => false, :class => "input-small" %>
      <% end %>
      <%= f.input :ticket_no, hint: "Freight document number & date" do %>
        <%= f.input_field :ticket_no, :class => "input-small" %>
        <%= f.input_field :ticket_date, :as => "string", :class => "input-small", "data-datepicker" => "datepicker" %>
      <% end %>
      <%#= f.input :vessel2, :label => "Additional Vessel" %>
      <%= f.input :notes, :as => :text, :input_html => {:rows => "2"} %>
      <% if @transnode.fromwhere == 'position' %>
        <div class="controls">
          <div class="btn-toolbar">
            <div class="btn-group">
              <%= f.button :submit, "Kaydet >> Yük Bilgilerine Devam Et", :class => 'btn btn-info' %>
            </div>
            <div class="btn-group">
              <a class="btn btn-danger dropdown-toggle" href="#" data-toggle="dropdown" href="#">Bu Adımı Atla<i class="icon-chevron-down icon-white"></i></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Yük Girişine Geç", new_loading_path(:position_id => @position.id) %></li>
                <li><%= link_to "Pozisyon Ekranına Git", position_path(@position) %></li>
              </ul>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</div>
