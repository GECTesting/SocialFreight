<div class="row-fluid">
  <fieldset>
    <div class="row-fluid">
      <div class="span6">
        <%= f.input :salutation, as: :select, label: t("companies.label.salutation"), collection: ['Mr.', 'Ms.', 'Mrs.', 'Dr.', 'Prof.'] %>
        <%= f.input :name, label: t("companies.label.contact_name") do %>
          <%= f.input_field :name, class: "input-small" %>
          <%= f.input_field :surname, class: "input-small" %>      
        <% end %>
        <%= f.input :email, label: t("defaults.label.email") %>
        <%= f.input :tel, label: t("defaults.label.tel")  %>
        <%= f.input :gsm, label: t("defaults.label.gsm")  %>
      </div>
      <div class="span6">
        <%= f.input :company_id, as: :hidden, label: t("defaults.label.company"), input_html: {class: "chosen_input", "data-url" => "/companies.json", "data-newrecurl" => "/companies/new", "data-placeholder" => t("companies.placeholder.company")} %>
        <%= f.input :jobtitle, label: t("companies.label.jobtitle") %>
        <%= f.input :department, label: t("companies.label.department") %>
        <%= f.input :twitter, label: t("companies.label.twitter_link") %>
        <%= f.input :linkedin, label: t("companies.label.linkedin_link") %>
      </div>
    </div>
  </fieldset>
</div>

