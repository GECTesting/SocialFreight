<div id="contact_form">
<%= simple_form_for @contact, html: { class: "form-horizontal" }, validate: true do |f| %>
  <%= f.error_notification %>

  <div class="pageBlock">
    <%= render 'shared/form_buttonsh', :f => f, :header => "New contact" %>

    <div class="tabbable tabs-below">

      <div id="my-tab-content" class="tab-content">
        <div id="contact-main-form" class="tab-pane active">
          <%= render 'form_main', :f => f %>
        </div>

        <div id="contact-detail-form" class="tab-pane form_tab_pane">
          <%= render 'form_detail', :f => f %>
        </div>
      </div>

    </div>
    
    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#contact-main-form">1-Ki≈üi Bilgileri</a></li>
      <li><a data-toggle="tab" href="#contact-detail-form">2-Detay Bilgileri</a></li>
    </ul>
    
  </div>

<% end %>
</div>