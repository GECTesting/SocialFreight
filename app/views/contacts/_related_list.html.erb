<%= table_for objects, table_html: { id: "contact_report_results", class: "table table-condensed table-striped table-fixed table-bordered"}, 
              header_row_html: { class: "headerRow" },
              row_html: { class: "dataRow" } do |table| %>
  <% table.column :action, column_html: { class: "actionCol", scope: "col" } do |contact| %>
    <%= link_to t("defaults.link.edit"), edit_contact_path(contact) %> 
    | 
    <%= link_to t("defaults.link.destroy"), contact, method: :delete, data: {confirm: t("defaults.messages.destroy_confirm") } %>
  <% end %>
  <% table.column :name, label: t("companies.label.contact_name"), column_html: { scope: "col" } do |contact| %>
    <%= contact.to_s %>
  <% end %>
  <% table.column :jobtitle, label: t("companies.label.jobtitle") , column_html: { scope: "col" } %>
  <% table.column :department, label: t("companies.label.department"), column_html: { scope: "col" } %>
  <% table.column :email, label: t("dedfaults.label.email"), column_html: { class: "emailCol", scope: "col" } %>
  <% table.column :tel, label: t("dedfaults.label.tel"), column_html: { class: "phoneCol", scope: "col" } %>

<% end %>