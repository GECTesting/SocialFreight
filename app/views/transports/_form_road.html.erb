<div class="row-fluid">
  <fieldset>
  <legend>Araç Bilgisi</legend>
  <div class="span6">
      <%= f.input :vessel, :label => "Dorse & Çekici" do %>
        <%= f.input_field :vessel, :class => "input-small", "data-placeholder" => "Dorse Plaka" %>
        <%= f.input_field :truck, :class => "input-small", "data-placeholder" => "Çekici Plaka" %>
      <% end %>
      <%= f.input :voyage, "data-placeholder" => "Sefer No" %>
      <%#= f.input :driver_name, "data-placeholder" => "Sürücü" %>
      <%= f.input :driver_id, as: :hidden, label: "Sürücü", input_html: {class: "chosen_input", "data-url" => "/people.json", "data-newrecurl" => "/people/new", "data-selected" => @transport.driver_id ? @transport.driver.to_s : "", "data-placeholder" => "Sürücü Seçiniz."} %>
      <%#= f.input :waybill_flag, hint: "CMR belgesini biz düzenleyeceğiz" %>
  </div>
  <div class="span6">
      <%#= f.input :owner_id, :as => :select, :collection => [[@transport.owner_id ? @transport.owner.name : "", @transport.owner_id]], :label => I18n.t("position.#{@transport.trans_method}.label.transporter"), :input_html => {:class => "chosen_input", "data-url" => "/companies.json" }, placeholder: "Araç Sahibi Firma" %>
      <%= f.input :owner_id, as: :hidden, label: "Araç Sahibi Firma", input_html: { class: "chosen_input", "data-url" => "/companies.json", "data-newrecurl" => "/companies/new", "data-selected" => @transport.owner_id ? @transport.owner.name : "", "data-placeholder" => "Araç Sahibi Firmayı Seçiniz"} %>
      <%= f.input :supplier_id, as: :hidden, label: "Nakliyeci Firma", input_html: { class: "chosen_input", "data-url" => "/companies.json", "data-newrecurl" => "/companies/new", "data-selected" => @transport.supplier_id ? @transport.supplier.name : "", "data-placeholder" => "Nakliyeci Firmayı Seçiniz" } %>
      <%= f.input :freight_price, label: "Navlun Ücreti" do %>
        <%= f.input_field :freight_price, :class => "input-small" %>
        <%= f.input_field :freight_curr, :as => :select, :collection => Currency.all, :include_blank => false, :class => "input-small" %>
      <% end %>
  </div>
  <div class="span6">
    <legend>Çıkış Bilgisi</legend>
    <%= f.input :departure_date do %>
       <%= f.input_field :departure_date, as: :string, placeholder: "Çıkış Tarihi", class: "input-date", "data-datepicker" => "datepicker" %>
       <%= f.input_field :departure_hour, placeholder: "Saati", class: "input-hour" %>
    <% end %>
    <%= f.input :dep_country_id, label: "Çıkış Ülke & Şehir" do %>
      <%=f.input_field :dep_country_id, as: :select, collection: Country.all, include_blank: true, class: "input-small country_select", placeholder: "Çıkış Ülkesi" %>
      <%= f.input_field :dep_city_id, as: :select, collection: City.find(:all, conditions: ["country_id = :c", { :c => @transport.dep_country_id } ]), include_blank: true, class: "input-small city_select", placeholder: "Çıkış Şehri" %>
    <% end %>
    <%#= f.input :dep_place_type, as: :select, collection: Loading.point_types.map { |r| [r[1], r[0] ] }, include_blank: true, input_html: { class: "input-medium" } %>
    <%#= f.input :dep_place_id, as: :hidden, label:"Çıkış Noktası", input_html: { class: "chosen_input", "data-url" => "/places.json", "data-newrecurl" => "/places/new", "data-selected" => @transport.dep_place_id ? @transport.dep_place.name : "", "data-placeholder" => "Araç Çıkış Noktası"} %>
  </div>
  <div class="span6">
    <legend>Varış Bilgisi</legend>
      <%= f.input :arrival_date do %>
        <%= f.input_field :arrival_date, as: :string, placeholder: "Varış Tarihi", class: "input-date", "data-datepicker" => "datepicker" %>
        <%= f.input_field :arrival_hour, placeholder: "Saati", class: "input-hour" %>
      <% end %>
      <%= f.input :arv_country_id, label: "Varış Ülke & Şehir" do %>
        <%= f.input_field :arv_country_id, as: :select, collection: Country.all, include_blank: true, class: "input-small country_select", placeholder: "Varış Ülkesi" %>
        <%= f.input_field :arv_city_id, as: :select, collection: City.find(:all, conditions: ["country_id = :c", { :c => @transport.arv_country_id } ]), include_blank: true, class: "input-small city_select", placeholder: "Varış Şehri" %>
      <% end %>
      <%#= f.input :arv_place_type, as: :select, collection: Loading.point_types.map { |r| [r[1], r[0] ] }, include_blank: true, placeholder: "Aracın varış noktası", input_html: { class: "input-small", "data-placeholder" => "Varış Yeri Tipi" } %>
      <%#= f.input :arv_place_id, as: :hidden, label:"Varış Noktası", input_html: { class: "chosen_input", "data-url" => "/places.json", "data-newrecurl" => "/places/new", "data-selected" => @transport.arv_place_id ? @transport.arv_place.name : "", "data-placeholder" => "Araç Varış Noktası"} %>
  </div>
  <legend>Güzergah Bilgisi</legend>
  </fieldset>
  <%= f.input :trans_method, :as => :hidden %>
  <%= f.input :dep_place_type, as: :hidden, value: "road" %>
  <%= f.input :arv_place_type, as: :hidden, value: "road" %>
</div>
