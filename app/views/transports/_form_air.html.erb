<div class="row-fluid">
  <div class="page-header">
    <h4>
      <%= t("transports.title.transport_info") %>
      <small class="pull-right"><%= t("transports.message.air_transport") %></small>
    </h4>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <fieldset>
        <legend><%= t("transports.title.air_transport") %></legend>
        <%= f.input :vessel, label: t("transports.label.air_vessel") do %>
          <%= f.input_field :vessel, :class => "input-small", placeholder: t("transports.placeholder.air_plane") %>
          <%= f.input_field :voyage, :class => "input-small", placeholder: t("transports.placeholder.air_voyage") %>
        <% end %>
        <%= f.input :owner_id, as: :hidden, label: t("transports.title.airline"), input_html: { class: "chosen_input", "data-url" => "/companies.json", "data-newrecurl" => "/companies/new", "data-placeholder" => t("transports.placeholder.airline")} %>
        <%= f.input :supplier_id, as: :hidden, label: t("transports.label.air_supplier"), input_html: {class: "chosen_input", "data-url" => "/companies.json", "data-placeholder" => t("transports.placeholder.air_supplier") } %>
        <hr>
        <%= f.input :freight_price, label: t("defaults.label.freight_price") do %>
          <%= f.input_field :freight_price, :class => "input-small" %>
          <%= f.input_field :freight_curr, :as => :select, :collection => Nimbos::Currency.all, :include_blank => false, :class => "input-small" %>
        <% end %>
        <%= f.input :waybill_no, label: t("transports.label.waybill_info") do %>
          <%= f.input_field :waybill_no, class: "input-small", placeholder: t("transports.label.waybill_no") %>
          <%= f.input_field :waybill_date, as: :string, class: "input-small", "data-datepicker" => "datepicker", placeholder: t("transports.label.waybill_date") %>
        <% end %>
      </fieldset>
    </div>
    <div class="span6">
      <fieldset>
        <legend><%= t("transports.title.air_departure") %></legend>
        <%= f.input :departure_date, label: t("transports.label.departure_datehour") do %>
           <%= f.input_field :departure_date, as: :string, placeholder: t("operations.label.departure_date"), class: "input-date", "data-datepicker" => "datepicker" %>
           <%= f.input_field :departure_hour, placeholder: t("transports.placeholder.transport_hour"), class: "input-hour" %>
        <% end %>
        <%= f.input :dep_place, label: t("transports.label.departure_airport") %>
        <%= f.input :dep_country_id, label: t("transports.label.departure_citycountry") do %>
          <%=f.input_field :dep_country_id, as: :select, collection: Nimbos::Country.all, include_blank: true, class: "input-small country_select", placeholder: t("transports.placeholder.departure_country") %>
          <%= f.input_field :dep_city, class: "input-small", placeholder: t("transports.placeholder.departure_city") %>
        <% end %>
        <hr>
        <%= f.input :arrival_date, label: t("transports.label.arrival_datehour") do %>
          <%= f.input_field :arrival_date, as: :string, placeholder: t("operations.label.arrival_date"), class: "input-date", "data-datepicker" => "datepicker" %>
          <%= f.input_field :arrival_hour, placeholder: t("transports.placeholder.transport_hour"), class: "input-hour" %>
        <% end %>
        <%= f.input :arv_place, label: t("transports.label.arrival_airport") %>
        <%= f.input :arv_country_id, label: t("transports.label.arrival_citycountry") do %>
          <%= f.input_field :arv_country_id, as: :select, collection: Nimbos::Country.all, include_blank: true, class: "input-small country_select", placeholder: t("transports.placeholder.arrival_country") %>
          <%= f.input_field :arv_city, class: "input-small", placeholder: t("transports.placeholder.arrival_city") %>
        <% end %>
        <% if params[:action] != "edit" %>
          <span class="pull-right label"><%= t("transports.message.enter_air_route") %></span>
        <% end %>
      </fieldset>
    </div>
  </div>
</div>
