<div class="row-fluid">
  <div class="row-fluid">
    <div class="span6">
      <fieldset>
        <legend>Uçak ve Havayolu Bilgisi</legend>
        <%= f.input :vessel, :label => "Uçak & Sefer No" do %>
          <%= f.input_field :vessel, :class => "input-small", placeholder: "Uçak Adı" %>
          <%= f.input_field :voyage, :class => "input-small", placeholder: "Uçak Sefer No" %>
        <% end %>
        <%= f.input :owner_id, as: :hidden, label: "Havayolu", input_html: { class: "chosen_input", "data-url" => "/companies.json", "data-newrecurl" => "/companies/new", "data-placeholder" => "Havayolu Firmasını Seçiniz"} %>
        <%= f.input :supplier_id, as: :hidden, label: "Tedarikçi", input_html: {class: "chosen_input", "data-url" => "/companies.json", "data-placeholder" => "CASS veya Navlun Ödenen Firma" } %>
        <%= f.input :freight_price, label: "Navlun Fiyatı" do %>
          <%= f.input_field :freight_price, :class => "input-small" %>
          <%= f.input_field :freight_curr, :as => :select, :collection => Currency.all, :include_blank => false, :class => "input-small" %>
        <% end %>
      </fieldset>
    </div>
    <div class="span6">
      <fieldset>
        <legend>Uçak Hareket Bilgisi</legend>
        <%= f.input :departure_date, label: "Çıkış Tarihi & Saati" do %>
           <%= f.input_field :departure_date, as: :string, placeholder: "Çıkış Tarihi", class: "input-date", "data-datepicker" => "datepicker" %>
           <%= f.input_field :departure_hour, placeholder: "Saati", class: "input-hour" %>
        <% end %>
        <%= f.input :dep_place, label:"Çıkış Havalimanı", placeholder: "Kalkış Havalimanı" %>
        <hr>
        <%= f.input :arrival_date, label: "Varış Tarihi & Saati" do %>
          <%= f.input_field :arrival_date, as: :string, placeholder: "Varış Tarihi", class: "input-date", "data-datepicker" => "datepicker" %>
          <%= f.input_field :arrival_hour, placeholder: "Saati", class: "input-hour" %>
        <% end %>
        <%= f.input :arv_place, label:"Varış Havalimanı", placeholder: "Varış Havalimanı" %>
      </fieldset>
    </div>
  </div>
  <div class="row-fluid">
    <legend>Aktarma Havaliman Bilgileri</legend>
  </div>
</div>
