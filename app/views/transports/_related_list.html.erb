<%= table_for objects, table_html: { class: "table table-condensed table-striped table-fixed"}, 
              header_row_html: { class: "headerRow" },
              row_html: { class: "dataRow" } do |table| %>
  <% table.column :action, label: t("defaults.link.action"), column_html: { class: "actionCol", scope: "col" } do |transport| %>
    <%= link_to t("defaults.link.edit"), edit_transport_path(transport) %> 
    |
    <%#= link_to t("defaults.link.destroy"), transport, method: :delete, data: {confirm: t("defaults.messages.destroy_confirm")} %>              
  <% end %>
  <% table.column :voyage, label: t("operations.label.voyage"), column_html: { class: "phoneCol", scope: "col" } do |transport| %>
     <%= link_to transport.voyage, transport_path(transport) %>
  <% end %> 
  <% table.column :vessel, label: t("operations.label.vessel"), column_html: { scope: "col" } do |transport| %>
    <%= "#{transport.vessel} #{transport.truck}" %>
  <% end %>
  <%# table.column :trans_method, label: t("operations.label.trans_method"), column_html: { scope: "col" } do |transport| %>
    <%#= link_to t("operations.label.#{transport.trans_method}_transport"), transport_path(transport) %>
  <%# end %>
  <% table.column :departure_date, label: t("operations.label.departure_date"), column_html: { scope: "col" } %>
  <% table.column :dep_place, label: t("operations.label.departure_place"), column_html: { scope: "col" } do |transport| %>
    <%= "#{transport.dep_place} #{transport.dep_city} #{transport.dep_country_id}" %>
  <% end %>
  <% table.column :arrival_date, label: t("operations.label.arrival_date"), column_html: { scope: "col" } %> 
  <% table.column :arv_place, label: t("operations.label.arrival_place"), column_html: { scope: "col" } do |transport| %>
    <%= "#{transport.arv_place} #{transport.arv_city} #{transport.arv_country_id}" %>
  <% end %>
  <% table.column :driver_name, label: t("operations.label.driver"), column_html: { class: "phoneCol", scope: "col" } %>
<% end %>