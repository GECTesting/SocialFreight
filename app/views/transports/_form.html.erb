<div id="opform">
<%= simple_form_for @transport, html: { class: 'form-horizontal' }, validate: true do |f| %>
  <%= f.error_notification %>
  <%= f.error :base, :error_method => :to_sentence %>
  <fieldset>

    <div class="pageBlock">
      <%#= render 'shared/form_buttonsh', :f => f %>
   
      <!--div class="tabbable tabs-below"-->
      <div class="page-header">
        <h3>Multimodal Taşıma Bilgisi</h3>
      </div>
      <div id="transport-main-form" class="tab-pane active">
        <%= render "form_#{@transport.trans_method}", :f => f %>
      </div>

      <%= f.input :position_id, :as => :hidden %>
      <div class="form-actions">
        <%= f.button :submit, "Multimodal Taşıma Bilgisini Kaydet", :class => 'btn btn-info', :accesskey => "s" %>
        <button type="button" class="btn">Vazgeç</button>
      </div>
    </div>

  </fieldset>
<% end %>
</div>
