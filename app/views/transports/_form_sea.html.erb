<div class="row-fluid">
  <div class="page-header">
    <h4>
      <%= t("transports.title.transport_info") %>
      <small class="pull-right"><%= t("transports.message.sea_transport") %></small>
    </h4>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <fieldset>
        <legend><%= t("transports.title.sea_transport") %></legend>
        <%= f.input :vessel, label: t("transports.label.sea_vessel") do %>
          <%= f.input_field :vessel, class: "input-small", placeholder: t("transports.placeholder.shipname") %>
          <%= f.input_field :voyage, class: "input-small", placeholder: t("transports.placeholder.sea_voyage") %>
        <% end %>
        <%= f.input :owner_id, as: :hidden, label: t("transports.title.armator"), input_html: { class: "chosen_input", "data-url" => "/companies.json", "data-newrecurl" => "/companies/new", "data-placeholder" => t("transports.placeholder.armator")} %>
        <%= f.input :supplier_id, as: :hidden, label: t("transports.label.sea_liner"), input_html: {class: "chosen_input", "data-url" => "/companies.json", "data-placeholder" => t("transports.placeholder.sea_liner") } %>
        <hr>
        <%= f.input :freight_price, label: t("defaults.label.freight_price") do %>
          <%= f.input_field :freight_price, class: "input-small" %>
          <%= f.input_field :freight_curr, as: :select, collection: Currency.all, :include_blank => false, class: "input-small" %>
        <% end %>
        <%= f.input :waybill_no, label: t("transports.label.waybill_info") do %>
          <%= f.input_field :waybill_no, class: "input-small", placeholder: t("transports.label.waybill_no") %>
          <%= f.input_field :waybill_date, as: :string, class: "input-small", "data-datepicker" => "datepicker", placeholder: t("transports.label.waybill_date") %>
        <% end %>
      </fieldset>
    </div>
    <div class="span6">
      <fieldset>
        <legend><%= t("transports.title.sea_departure") %></legend>
        <%= f.input :departure_date, label: t("transports.label.departure_datehour") do %>
          <%= f.input_field :departure_date, as: :string, placeholder: t("operations.label.departure_date"), class: "input-date", "data-datepicker" => "datepicker" %>
          <%= f.input_field :departure_hour, placeholder: t("transports.placeholder.transport_hour"), class: "input-hour" %>
        <% end %>
        <%= f.input :dep_place, label: t("transports.label.departure_seaport") %>
        <%= f.input :dep_country_id, label: t("transports.label.departure_citycountry") do %>
          <%=f.input_field :dep_country_id, as: :select, collection: Country.all, include_blank: true, class: "input-small country_select", placeholder: t("transports.placeholder.departure_country") %>
          <%= f.input_field :dep_city, class: "input-small", placeholder: t("transports.placeholder.departure_city") %>
        <% end %>
        <hr>
        <%= f.input :arrival_date, label: t("transports.label.arrival_datehour") do %>
          <%= f.input_field :arrival_date, as: :string, placeholder: t("operations.label.arrival_date"), class: "input-date", "data-datepicker" => "datepicker" %>
          <%= f.input_field :arrival_hour, placeholder: t("transports.placeholder.transport_hour"), class: "input-hour" %>
        <% end %>
        <%= f.input :arv_place, label: t("transports.label.arrival_seaport") %>
        <%= f.input :arv_country_id, label: t("transports.label.arrival_citycountry") do %>
          <%= f.input_field :arv_country_id, as: :select, collection: Country.all, include_blank: true, class: "input-small country_select", placeholder: t("transports.placeholder.arrival_country") %>
          <%= f.input_field :arv_city, class: "input-small", placeholder: t("transports.placeholder.arrival_city") %>
        <% end %>
        <%= link_to t("transports.link.show_air_transnodes"), "#", class: "togglebutton pull-right", "data-href" => "#transnode_info" %>
      </fieldset>
    </div>
  </div>
  <div id="transnode_info" class="row-fluid slidingDiv">
    <legend><%= t("transports.title.sea_transnode")</legend>
  </div>
</div>
