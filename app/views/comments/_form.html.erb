<div class="row-fluid">
  <%= simple_form_for [object, object.comments.build()], :validate => true, :remote => true do |f| %>
    <div class="row-fluid">
    <%= f.error_notification %>
    <%= f.input :comment_text, :as => :text, :input_html => {:rows => "1", :style => "width:95%"}, :label => "Yorum Ekle" %>
    <%= f.button :submit, :class => 'btn btn-info' %>
     </div>
  <% end %>
</div>
