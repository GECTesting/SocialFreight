<li class="media">
  <div class="feedline">
    <a href="#" class="img-load"><%= image_tag comment.user.avatar_url(:small), style: "width:30px;height:30px;" %></a> 
    <span><%= comment.user %></span>&nbsp;
    <span><%= comment.comment_text %></span>
    <p class="rightside">
      <abbr class="timeago" title="<%= comment.created_at.round(0).iso8601(10) %>"></abbr>
      <%#= link_to "#{comment.created_at.strftime("%d/%m/%Y %I:%M%p")}", "#" %>
    </p>
  </div>
</li>
