<div id="company_form" class="main-model-form">
<%= simple_form_for @company, html: {class: 'form-horizontal'}, validate: true do |f| %>
  <%= f.error_notification %>
  <%= f.error :base, :error_method => :to_sentence %>

  <div class="pageBlock">
    <%= render 'shared/form_header', message: "New Company" %>

    <div class="tabbable tabs-below">

      <div id="my-tab-content" class="tab-content">
        <div id="company-main-form" class="tab-pane active">
          <%= render 'form_main', :f => f %>
          <% unless params[:action] == "edit" %>
            <%= f.fields_for :contacts do |builder| %>
              <%= render 'contacts_fields', :f => builder %>
            <% end %>
          <% end %>
        </div>

        <!--div id="company-invoice-form" class="tab-pane form_tab_pane">
          <%#= render 'form_invoice', :f => f %>
        </div-->
        <div class="controls rightside">
          <%#= link_to "Bu Adımı Atla >>", next_wizard_path, :class => 'btn btn-danger' %>
          <%= f.button :submit, t("defaults.action.save"), :class => 'btn btn-info' %>
        </div>
      </div>
    </div>
    
    <!--ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#company-main-form">1-Firma Bilgileri</a></li>
      <li><a data-toggle="tab" href="#company-invoice-form">2-Finans Bilgileri</a></li>
    </ul-->
    
  </div>

<% end %>
</div>