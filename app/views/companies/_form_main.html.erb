<div class="row-fluid">
  <div class="span6">
    <fieldset>
      <%= f.input :name, :label => "Short Name" %>
      <%= f.input :company_type do %>
        <%= f.select :company_type, Company.company_types.map { |r| [r[1], r[0] ] }, :include_blank => false %>
      <% end %>
      <%= f.input :tel  %>
      <%= f.input :fax  %>
      <%= f.input :email %>
      <%= f.input :gsm  %>
      <%= f.input :website %>
    </fieldset>
  </div>
  <div class="span6">
    <fieldset>
      <%= f.input :branch_id, :as => :select, :collection => current_patron.branches, :include_blank => false %>
      <%= f.input :country_id do %>
        <%= f.input_field :country_id, :class => "input-medium", :as => :select, :collection => Country.all, :include_blank => false %>
        <%= f.input_field :city_id, :class => "input-medium", :as => :select, :collection => City.all, :include_blank => false %>
      <% end %>
      <%= f.input :district do %>
        <%= f.input_field :district, :class => "input-medium" %>
        <%= f.input_field :postcode, :class => "input-small" %>
      <% end %>
      <%= f.input :address, :as => :text, :input_html => {:rows => "2", :cols => "35"} %>
      <%= f.input :voip, :label => "Skype"  %>
      <%#= f.input :notes, :as => :text, :label =>"Operational Notes", :input_html => {:rows => "3", :cols => "35"} %>
      <%#= f.input :description, :as => :text, :label =>"Other Notes", :input_html => {:rows => "3", :cols => "35"} %>
    </fieldset>
  </div>
  <%= f.fields_for :contacts do |builder| %>
    <%= render 'contacts_fields', :f => builder %>
  <% end %>

</div>

