<div class="row-fluid">
  <fieldset>
    <div class="row-fluid">
      <div class="span6">
        <%= f.input :name, label: t("companies.label.name"), placeholder: "Firma Kısa Adı" %>
        <%= f.input :company_type, as: :select, collection: Company.company_types.map { |r| [r[1], r[0] ] }, include_blank: false, label: t("companies.label.company_type") %>
        <%= f.input :sector, label: t("companies.label.sector"), placeholder: "ÖNEMLİ, Firmanın çalıştığı sektör" %>
      </div>
      <div class="span6">
        <%= f.input :tel, label: t("defaults.label.tel"), placeholder: "Firma Telefon numarası" %>
        <%= f.input :fax, label: t("defaults.label.fax"), placeholder: "Firma Fax numarası"  %>
        <%= f.input :website, label: t("defaults.label.website"), placeholder: "Firma Web Adresi" %>
      </div>
    </div>
    <hr>
    <div class="row-fluid">
      <div class="span6">
        <%= f.input :parent_id, as: :hidden, label: t("companies.label.parent_company"), input_html: {class: "chosen_input", "data-url" => "/companies.json", "data-newrecurl" => "/companies/new", "data-placeholder" => "Grup Firması Seçiniz."} %>
        <%= f.input :branch_id, as: :select, collection: current_patron.branches, include_blank: false, selected: current_user.branch_id, label: t("defaults.label.branch") %>
        <%= f.input :notes, as: :text, label: t("defaults.label.notes"), input_html: {rows: "2", cols: "35"} %>
      </div>
      <div class="span6">
        <%= f.input :country_id, label: t("defaults.label.country") do %>
          <%= f.input_field :country_id, class: "country_select input-small", as: :select, collection: Country.all, include_blank: false, selected: current_patron.country_id, placeholder: "Bulunduğu Ülke" %>
          <%= f.input_field :city, class: "input-small", placeholder: "Bulunduğu Şehir" %>
        <% end %>
        <%= f.input :district, label: t("defaults.label.district") do %>
          <%= f.input_field :district, class: "input-small", placeholder: "Bulunduğu Semt" %>
          <%= f.input_field :postcode, class: "input-small", placeholder: "Posta kodu" %>
        <% end %>
        <%= f.input :address, as: :text, label: t("defaults.label.address"), input_html: {rows: "2", cols: "35"}, placeholder: "Firma Adresi" %>
      </div>
    </div>
  </fieldset>
</div>

