<div id="quick-profile" class="company">
  <div>
    <table style="width:100%" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td class="labelCol2">Tipi :</td>
        <td class="dataCol2"><%= Company.company_types[@company.company_type] %></td>
        <td class="labelCol2">Website :</td>
        <td class="dataCol2"><%= @company.website %></td>
        <td class="dataCol2" rowspan="3">
          <%= @company.address %><br/><%= @company.district %>&nbsp;<%= @company.postcode %><br/>
          <%= @company.city.name if @company.city %>&nbsp;<%= @company.country.name if @company.country %>
        </td>
      </tr>
      <tr>
        <td class="labelCol2">Telefon :</td>
        <td class="dataCol2"><%= @company.tel %></td>
        <td class="labelCol2">GSM :</td>
        <td class="dataCol2 lastCol"><%= @company.gsm %></td>
      </tr>
      <tr>
        <td class="labelCol2">Mail :</td>
        <td class="dataCol2 lastCol"><%= @company.email %></td>
        <td class="labelCol2">Fax :</td>
        <td class="dataCol2"><%= @company.fax %></td>
      </tr>
    </table>
  </div>
</div>
