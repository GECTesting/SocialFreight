<div id="quick-profile" class="company">
  <div>
    <table style="width:100%" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td><h3><%= @company.name %></h3></td>
        <td colspan="4"><%= render 'companies/tab_header', company: @company %></td>
      </tr>
      <tr>
        <td class="dataCol2"><i class="icon-volume-up"></i><%= @company.tel %></td>
        <td class="labelCol2">Website :</td>
        <td class="dataCol2">
          <%= link_to @company.website, url_with_protocol(@company.website), :target => '_blank' %>
        </td>
        <td class="labelCol2">Firma Tipi :</td>
        <td class="dataCol2 lastCol"><%= Company.company_types[@company.company_type] %></td>

      </tr>
      <tr>
        <td class="dataCol2"><i class="icon-print"></i><%= @company.fax %></td>
        <td class="labelCol2">Grup Firması :</td>
        <td class="dataCol2"></td>
        <td class="labelCol2">Sektör :</td>
        <td class="dataCol2 lastCol"><%= @company.sector %></td>
      </tr>
    </table>
  </div>
</div>
