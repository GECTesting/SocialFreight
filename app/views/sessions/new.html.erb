<div class="row">
  
  <div class="span6 columns">
    <div id="login_image" style="padding:20px;">
      <%#= image_tag "ff.jpg" %>
    </div>
    <div id="login_form">
      <%= form_tag sessions_path, class: "form-horizontal", validate: true do %>
        <fieldset>
        <div class="control-group">
          <%= label_tag :email, nil, class: "control-label" %>
          <div class="controls">
            <%= text_field_tag :email, session[:socialfreight_mail].to_s, class: "medium" %>
          </div>
        </div>
        <div class="control-group">
          <%= label_tag :password, nil, class: "control-label" %>
          <div class="controls">
            <%= password_field_tag :password, nil, class: "medium" %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%= label_tag :remember_me, class: "checkbox" do %>
              <%= check_box_tag :remember_me, 1, params[:remember_me] %> Remember Username
            <% end %>
          </div>
        </div>
        <div class="control-groups">
          <div class="controls">
            <%= submit_tag "Log in", :class => "btn btn-success" %>
            <%= link_to "Forgot your password?", new_password_reset_path %>
          </div>
        </div>
        </fieldset>
      <% end %>
    </div>
    <div id="signupnote">
      <p>Don't you have an account?&nbsp;<%= link_to "Sign up, it's free.", signup_path%></p>
      <p>You have freight operations?&nbsp;<%= link_to "Try SocialFreight.", try_path%></p>
    </div>
  </div>
  <div class="span6 columns">
    <div id="login_roadmap">
      <%= image_tag "cloud-go.jpg" %>
    </div>
  </div>
</div>



