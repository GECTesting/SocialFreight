<div class="row">
  <div class="page-header span16 columns">
    <h4>Log in</h4>
  </div>
  <div id="login_form" class="span16 columns">
    <%= form_tag sessions_path do %>
      <fieldset>
      <div class="clearfix">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
      </div>
      <div class="clearfix">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
        <%= link_to "Forgotten Password?", new_password_reset_path %>
      </div>
      <div class="clearfix">
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
        <%= label_tag :remember_me %>
      </div>
      <div class="input"><%= submit_tag "Log in", :class => "btn primary" %></div>
      </fieldset>
    <% end %>
  </div>
</div>



