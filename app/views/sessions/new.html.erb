<div class="row">
  
  <div class="span8 columns">
    <div id="login_image">
      <%= image_tag "login_screen.png" %>
    </div>
    <div id="login_form">
      <%= form_tag sessions_path, :validate => true do %>
        <fieldset>
        <div class="clearfix">
          <%= label_tag :email %>
          <%= text_field_tag :email, params[:email] %>
        </div>
        <div class="clearfix">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
        <div class="clearfix">
          <%= check_box_tag :remember_me, 1, params[:remember_me] %>
          <%= label_tag :remember_me %>
        </div>
        <div class="input">
          <%= submit_tag "Log in", :class => "btn primary" %>&nbsp;&nbsp;
          <%= link_to "Forgot your password?", new_password_reset_path %></div>
        </fieldset>
      <% end %>
    </div>
    <div id="signupnote">
      <p>Don't you have an account?&nbsp;<%= link_to "Sign up, it's free.", signup_path%></p>
      <p>You have freight operations?&nbsp;<%= link_to "Try SocialFreight.", try_path%></p>
    </div>
  </div>
  <div class="span8 columns">
    <div id="login_roadmap">
      <%= image_tag "cloud-go.jpg" %>
    </div>
  </div>
</div>



