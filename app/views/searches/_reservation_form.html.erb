<div id="search-form" class="widget">
<%= simple_form_for @search do |f| %>

  <fieldset>
    <div class="row">
      <div class="span8 columns">
        <%= f.input :model, :as => :hidden, :input_html => { :value => "reservations" } %>
        <%= f.input :searched, :as => :hidden, :input_html => { :value => "false" } %>
        <%= f.input :operation, :as => :hidden %>
        <%= f.input :direction, :label => false do %>
          <%= f.input_field :direction, :as => :radio, :collection => Position.direction_types.map { |r| [r[1], r[0] ] }, :class =>
 "small" %>
          <%= f.input_field :branch, :as => :select, :collection => current_patron.branches, :class => "medium" %>
        <% end %>
      </div>
      <div class="span8 columns">
        <%= f.input :docdate1, :label => "Load Date" do %>
          <%= f.input_field :docdate1, :class => "small", "data-datepicker" => "datepicker" %>
          <%= f.input_field :docdate2, :class => "small", "data-datepicker" => "datepicker" %>
          <%= f.button :submit, "Search", :class => 'btn primary' %>
          <%= link_to (image_tag "advanced_search.png"), "#", :class => 'togglebutton', "data-placement" => "below",  "rel" => 'twipsy', "title" => "DetaylÄ± Ara", "data-href" => "#loading_search_form" %>
        <% end %>
      </div>
    </div>
    <div id="loading_search_form" class="slidingDiv row">
      <div class="span8 columns">
        <%= f.input :company_id %>
      </div>
      <div class="span8 columns">
        <%= f.input :country, :as => :select, :collection => Country.all, :include_blank => false, :input_html => {:class => "medium"} %>
      </div>
    </div>
  </fieldset>
<% end %>
</div>
