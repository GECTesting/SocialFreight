<div id="search-form" class="profile widget">
  <div class="page-header">
    <h5>Rapor Kriter Seçimi</h5>
  </div>
  <div class="row-fluid">
  <%= simple_form_for @search, html: { class: "form-horizontal" } do |f| %>
    <fieldset>
      <div class="row-fluid">
    	  <div class="span6">
    		  <%= f.input :direction, as: :select, collection: Position.direction_types.map { |r| [r[1], r[0] ] }, include_blank: false %>
    	  </div>
    	  <div class="span6">
    	    <%= f.input :docdate1, label: "Kayıt Tarihi" do %>
    	      <%= f.input_field :docdate1, as: "string", class: "input-date", "data-datepicker" => "datepicker" %>
    	      <%= f.input_field :docdate2, as: "string", class: "input-date", "data-datepicker" => "datepicker" %>
    	      <%= f.button :submit, "Search", class: 'btn btn-success' %>
    	      <%= link_to "Detaylı Ara", "#", class: 'togglebutton', "data-placement" => "below",  "rel" => 'twipsy', "title" => "Detaylı Ara", "data-href" => "#load_form_details" %>
    	    <% end %>
    	  </div>
      </div>
      <div class="row-fluid">
        <div class="span6">
          <%= f.input :company_id, as: :hidden, label: t("defaults.label.customer"), input_html: { class: "chosen_input", "data-url" => "/companies.json", "data-newrecurl" => "/companies/new", "data-placeholder" => t("operations.placeholder.customer") } %>
        </div>
        <div class="span6">
          <%= f.input :branch_id, as: :select, collection: current_patron.branches, selected: current_user.branch_id %>
        </div>
        <%= f.input :operation, as: :hidden %>
        <%= f.input :model, as: :hidden %>
      </div>
      <div id="load_form_details" class="row-fluid slidingDiv">
      </div>
    </fieldset>
  <% end %>
  </div>
</div>
