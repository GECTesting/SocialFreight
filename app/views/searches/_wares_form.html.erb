<div id="search-form" class="profile widget">
  <div class="page-header">
    <h5>Rapor Kriter Seçimi</h5>
  </div>
  <div class="row-fluid">
  <%= simple_form_for @search, html: { class: "form-horizontal" } do |f| %>
    <fieldset>
      <div class="row-fluid">
    	  <div class="span6">
    		  <%= f.input :reference, label: "Talep Başlığı" %>
    	  </div>
    	  <div class="span6">
    	    <%#= f.input :docdate1, label: "Açılış Tarihi" do %>
    	      <%#= f.input_field :docdate1, as: "string", class: "input-date datepicker" %>
    	      <%#= f.input_field :docdate2, as: "string", class: "input-date datepicker" %>
    	      <%= f.button :submit, "Search", class: 'btn btn-success' %>
    	    <%# end %>
    	  </div>
      </div>
      <div class="row-fluid">
        <div class="span6">
          <%= f.input :user_id, as: :hidden, label: "Kaydı Açan", input_html: { class: "chosen_input", "data-url" => "/users.json" } %>
        </div>
        <div class="span6">
          <%# f.input :branch_id, as: :select, collection: current_patron.branches, selected: current_user.branch_id %>
        </div>
        <%= f.input :model, as: :hidden, value: "wares" %>
        <%= f.input :searched, as: :hidden, value: "false" %>
      </div>
      <div id="load_form_details" class="row-fluid slidingDiv">
      </div>
    </fieldset>
  <% end %>
  </div>
</div>
