<div id="search-form" class="widget">
  <div class="page-header">
    <h5>Rapor Kriter Seçimi</h5>
  </div>
  <div class="row-fluid">
    <%= simple_form_for @search, html: {class: 'form-horizontal'} do |f| %>
      <fieldset>
      <div class="row-fluid">
    		<div class="span6">
          <%= f.input :operation, as: :select, collection: Transport.trans_methods.map { |r| [r[1], r[0] ] } %>
          <%#= f.input :direction, as: :select, collection: Position.direction_types.map { |r| [r[1], r[0] ] } %>
          <%= f.input :branch_id, as: :select, collection: current_patron.branches, selected: current_user.branch_id, include_blank: true %>
    		</div>
    		<div class="span6">
          <%= f.input :docdate1, label: "Kayıt Tarihi" do %>
            <%= f.input_field :docdate1, as: "string", class: "input-date", "data-datepicker" => "datepicker" %>
            <%= f.input_field :docdate2, as: "string", class: "input-date", "data-datepicker" => "datepicker" %>
            <%= f.button :submit, "Search", class: 'btn btn-primary' %>
            <%#= link_to "Detaylı Ara", "#", class: 'togglebutton', "data-placement" => "below",  "rel" => 'twipsy', "title" => "Detaylı Ara", "data-href" => "#pos_form_details" %>
          <% end %>
    		</div>
        <%= f.input :model, as: :hidden, input_html: { value: "transports" } %>
        <%= f.input :searched, as: :hidden, value: "false" %>
      </div>
      </fieldset>
    <% end %>
  </div>
</div>
