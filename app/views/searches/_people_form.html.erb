<div id="search-form" class="profile widget">
  <div class="page-header">
    <h5>Rapor Kriter Seçimi</h5>
  </div>
  <div class="row-fluid">
  <%= simple_form_for @search, html: { class: "form-horizontal" } do |f| %>
    <fieldset>
    <%= f.simple_fields_for :filter do |ff| %>
      <div class="row-fluid">
        <div class="span6">
          <%= ff.input :name, label: "Name", input_html: { value: @search.filter["name"] } %>
          <%= ff.input :surname, label: "Surname", input_html: { value: @search.filter["surname"] } %>
        </div>
        <div class="span6">
          <%= ff.input :country_id do %>
            <%= ff.input_field :country_id, as: :select, collection: Nimbos::Country.all, include_blank: false, class: "input-small", selected: current_patron.country_id %>
            <%= ff.input_field :city, class: "input-small" %>
          <% end %>
        </div>
      </div>
    <% end %>
      <div class="row-fluid">
        <%= f.input :model, as: :hidden, value: "companies" %>
        <%= f.input :searched, as: :hidden, value: "false" %>
      </div>
      <%= f.button :submit, "Search", class: 'btn btn-success' %>
          <%#= link_to "Detaylı Ara", "#", class: 'togglebutton', "data-placement" => "below",  "rel" => 'twipsy', "title" => "Detaylı Ara", "data-href" => "#load_form_details" %>

      <div id="load_form_details" class="row-fluid slidingDiv">
      </div>
    </fieldset>
  <% end %>
  </div>
</div>