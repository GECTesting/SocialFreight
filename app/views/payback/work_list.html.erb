<div class="row-fluid">
  <%= render @person %>
</div>
<div class="row-fluid">

  <div id="<%= @person.id %>_transportList" class="pageBlock subRecordList">
    <div class="listSubRecords transport">
      <div class="pPageBlock brndScnBrd secondaryPalette">

        <div class="listHeader profile" style="margin-bottom:10px;">
	      <table cellspacing="0" cellpadding="0" border="0" style="width:100%;">
	        <tbody>
	          <tr style="width:100%">
	            <td class="listTitle"  style="width:30%;text-align:left">
	              <h4 class="mainTitle">Hesaplaşması Yapılmamış Taşımalar</h4>
	            </td>
	            <td class="listButtons" style="width:50%;text-align:left">
	              <%#= link_to "New #{listItem.humanize}", new_record_path(listItem, object), class: "btn btn-mini btn-info" %>          
	            </td>
	            <td class="listHelp" style="width:20%;text-align:right;padding-right:10px;">
	              
	            </td>
	          </tr>
	        </tbody>
	      </table>
	    </div>
        
        <div id="<%= @person.id %>_transportList_Body" class="listBody">
          	<%= table_for @transports, table_html: { class: "table table-condensed table-striped"}, 
			              header_row_html: { class: "headerRow" },
			              row_html: { class: "dataRow" } do |table| %>
			  <% table.column :action, column_html: { class: "actionCol", scope: "col" } do |transport| %>
			    <%= link_to "Güncelle", edit_transport_path(transport) %> 
			    | 
			    <%= link_to "Sil", transport, method: :delete, confirm: "Are you sure?" %>              
			  <% end %>
			  <% table.column :trans_method, column_html: { scope: "col" } %>
			  <% table.column :departure_date, column_html: { scope: "col" } %>
			  <% table.column :vessel, column_html: { scope: "col" } %>
			  <% table.column :truck, column_html: { class: "emailCol", scope: "col" } %>
			  <% table.column :voyage, column_html: { class: "phoneCol", scope: "col" } %>
			  <% table.column :dep_place, column_html: { class: "phoneCol", scope: "col" } do |transport| %>
			    <%= "#{transport.dep_city} #{transport.dep_country_id}" %>
			  <% end %>
			  <% table.column :arv_place, column_html: { class: "phoneCol", scope: "col" } do |transport| %>
			    <%= "#{transport.arv_city} #{transport.arv_country_id}" %>
			  <% end %>
			  <% table.column :payoff, column_html: { class: "actionCol", scope: "col" } do |transport| %>
			    <%= link_to "Hesaplaş", new_payoff_path(transport_id: transport.id), class: "btn btn-info btn-mini" %> 
			  <% end %>
			<% end %>
        </div>
      </div>
    </div>
  </div>
</div>