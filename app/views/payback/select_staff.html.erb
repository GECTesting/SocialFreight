<div class="row-fluid">
  <%= simple_form_for @payoff, url: wizard_path, method: :put, html: {class: 'form-horizontal'}, validate: true do |f| %>
    <%= f.error_notification %>
    
    <div class="page-header">
      <h4>Hesaplaşma yapılacak sürücüyü Seçiniz</h4>
    </div>

    <div class="row-fluid">
      <div class="span6">
        <fieldset>
          <%= f.input :staff_id, as: :hidden, label: "Sürücü/Personel", input_html: {class: "chosen_input", "data-url" => "/people.json", "data-newrecurl" => "/people/new", "data-placeholder" => "Sürücü/Personel Seçiniz."} %>
        </fieldset>
      </div>
    </div>     

    <div class="form-actions">
      <%= f.button :submit, "Devam Et >>", class: "btn btn-success" %>
    </div>

  <% end %>
</div>