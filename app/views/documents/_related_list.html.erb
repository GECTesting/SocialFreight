<%= table_for objects, table_html: { class: "table table-condensed table-striped table-fixed"}, 
              header_row_html: { class: "headerRow" },
              row_html: { class: "dataRow" } do |table| %>
  <% table.column :action, column_html: { class: "actionCol", scope: "col" } do |document| %>
    <%= link_to t("defaults.link.edit"), edit_document_path(document) %> 
    | 
    <%= link_to t("defaults.link.destroy"), document, method: :delete, data: {confirm: t("defaults.messages.destroy_confirm") } %>
  <% end %>
  <% table.column :document_type, label: t("documents.label.document_type"), column_html: { scope: "col" } %>
  <% table.column :document_date, label: t("documents.label.document_date"), column_html: { scope: "col" } %>
  <% table.column :document_no, label: t("documents.label.document_no"), column_html: { scope: "col" } %>
  <% table.column :description, label: t("documents.label.description"), column_html: { scope: "col" } %>
  <% table.column :document_file, column_html: { scope: "col" } %>
<% end %>