<div class="row-fluid">
<%= simple_form_for @finunit, :validate => true do |f| %>
  <%= f.error_notification %>
  <%= f.input :unit_type, :as => :hidden %>

  <div class="pageBlock">
    <%= render 'shared/form_buttonsh', :f => f %>
    <fieldset>
      <legend>Yeni Finans Birimi</legend>
      <div class="row-fluid">
        <div class="span6">
          <%= f.input :name %>
          <%= f.input :branch_id, :as => :select, :priority => ["#{current_user.person.branch_id}"], :collection => current_patron.branches, :include_blank => false %>
        </div>
        <div class="span6">
          <%= f.input :curr, :as => :select, :collection => Currency.all, :include_blank => false %>
          <%= f.input :person_id, :as => :select, :collection => [[@finunit.person_id ? @finunit.person.to_s : "", @finunit.person_id]], :input_html => {:class => "chosen_input", "data-url" => "/people.json"} %>
        </div>
      </div>
      <%= render "form_#{@finunit.unit_type.downcase}", :f => f %>
    </fieldset>
  </div>
<% end %>
</div>
