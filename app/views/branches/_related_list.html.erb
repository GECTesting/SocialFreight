<%= table_for objects, table_html: { class: "table table-condensed table-striped table-fixed"}, 
              header_row_html: { class: "headerRow" },
              row_html: { class: "dataRow" } do |table| %>
  <% table.column :action, column_html: { class: "actionCol", scope: "col" } do |branch| %>
    <%= link_to t("defaults.link.edit"), edit_branch_path(branch) %> 
    | 
    <%= link_to t("defaults.link.destroy"), branch, method: :delete, data: {confirm: t("defaults.messages.destroy_confirm")} %>              
  <% end %>
  <% table.column :name, label: t("branches.label.name") column_html: { scope: "col" } %>
  <% table.column :tel, label: t("branches.label.tel"), column_html: { scope: "col" } %>
  <% table.column :fax, label: t("branches.label.fax"), column_html: { scope: "col" } %>
  <% table.column :city, label: t("defaults.label.city"), column_html: { scope: "col" } %>
  <% table.column :country_id, label: t("branches.label.country"), column_html: { scope: "col" } do |branch| %>
    <%= branch.country.name if branch.country %>
  <% end %>

<% end %>