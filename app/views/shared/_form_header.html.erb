<div class="pageHeader profile" style="margin-bottom:10px;">
  <table cellspacing="0" cellpadding="0" border="0" style="width:100%;">
    <tbody>
      <tr style="width:100%">
        <td class="pbTitle"  style="width:50%;text-align:left">
          <% unless message.nil? %> 
            <h4 class="mainTitle"><%= message.humanize if message.present? %></h4>
          <% else %>
            <h4 class="mainTitle"><%= (params[:action] + " " + params[:controller]).humanize %></h4>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
