<table class="table table-condensed table-bordered">
  <thead>
    <tr>
      <% simple_table.columns.each_key do |col| %>
        <th><%= col %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% simple_table.each do |record| %>
      <tr>
        <% simple_table.values(record).each do |title, value| %>
          <td><%= value %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>