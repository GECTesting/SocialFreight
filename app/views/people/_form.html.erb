<div id="person_form">
<%= simple_form_for @person, html: { class: 'form-horizontal' }, :validate => true do |f| %>
  <%= f.error_notification %>


  <div class="pageBlock">
    <div class="page-header">
      <h3>Profil Bilgisi<small class="pull-right">Bize biraz kendinizden bahseder misiniz, tabii ki bu işlemi daha sonrada yapabilirsiniz.</small></h3>
    </div>

    <div class="tabbable tabs-below">

      <div id="my-tab-content" class="tab-content">
        <div id="person-main-form" class="tab-pane active">
          <%= render 'form_main', :f => f %>
        </div>

        <div id="person-detail-form" class="tab-pane form_tab_pane">
          <%= render 'form_detail', :f => f %>
        </div>
      </div>

    </div>
    
    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#person-main-form">1-Profil Bilgileri</a></li>
      <li><a data-toggle="tab" href="#person-detail-form">2-Kişisel Bilgiler</a></li>
    </ul>
    
    <div class="form-actions">
      <%= f.button :submit, "Profil Bilgilerimi Güncelle", class: 'btn btn-info', :accesskey => "s" %>
    </div>

  </div>

<% end %>
</div>