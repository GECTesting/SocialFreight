<div id="betauser_form">
<%= form_for Betauser.new, remote: true, html: { class: "form-inline" }  do |f| %>
  <%#= f.error_notification %>

  <fieldset>
      <%= f.label :email, t("content.home.betauser_message"), style: "color: #686868;font-weight:bold;font-size: 18px;line-height: 27px;margin-right:15px;" %>
      <%= f.text_field :email, placeholder: t("content.home.betauser_placeholder"), label: false %>
      <%= f.submit t("content.home.betauser_submit"), class: 'btn btn-primary' %>
  </fieldset>

<% end %>
</div>
