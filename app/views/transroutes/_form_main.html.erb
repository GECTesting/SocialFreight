<div class="row-fluid">

  <div class="span6">
    <fieldset>
      <%= f.input :route_type, as: :select, collection: Nimbos::Listitem.route_types.map { |t| [t.name, t.code] }, include_blank: true, label: t("transroutes.label.route_type") %>
      <%= f.input :route_name, label: t("transroutes.label.route_name") %>
      <%= f.input :arrival_date, as: :string, label: t("transroutes.label.arrival_date"), input_html: {class: "input-small", "data-datepicker" => "datepicker"} %>
      <%= f.input :departure_date, as: :string, label: t("transroutes.label.departure_date"), input_html: {class: "input-small", "data-datepicker" => "datepicker"} %>
    </fieldset>
  </div>
  <div class="span6">
    <fieldset>
      <%= f.input :route_city, label: t("defaults.label.city") %>
      <%= f.input :route_country, as: :select, collection: Nimbos::Country.all, include_blank: true, label: t("defaults.label.country") %>
      <%= f.input :notes, as: :text, input_html: { rows: "2" }, label: t("defaults.label.notes") %>
    </fieldset>
  </div>
</div>
<div class="form-actions">
  <%= f.button :submit, t("transroutes.action.save"), :class => 'btn btn-success' %>
</div>
<%= f.input :transport_id, as: :hidden %>