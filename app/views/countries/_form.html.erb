<%= simple_form_for @country, :validate => true do |f| %>
  <%= f.error_notification %>

  <fieldset>
    <div class="row">
      <div class="page-header span16 columns">
        <h4>Country</h4>
      </div>
      <div class="span8 columns">
        <%= f.input :code  %>
        <%= f.input :name %>
        <%= f.input :telcode %>
        <%= f.button :submit, :class => 'btn primary' %>
      </div>
    </div>
  </fieldset>

<% end %>
