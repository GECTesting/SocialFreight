<div class="row-fluid">
  <fieldset>
    <legend>Olay Bilgisi</legend>
    <div class="row-fluid">
      <div class="span6">
        <%= f.input :company_id, as: :hidden, label: t("defaults.label.company"), input_html: { class: "chosen_input", "data-url" => "/companies.json", "data-newrecurl" => "/companies/new" } %>
        <%= f.input :event_type, as: :select, label: t("companies.label.event_type"), collection: ['Şikayet', 'Tebrik', 'Talep', 'Yorum', 'Diğer'] %>
        <%= f.input :event_date, as: :string, label: t("companies.label.event_date"), input_html: {class: "input-small", "data-datepicker" => "datepicker"} %>
      </div>
      <div class="span6">
        <%= f.input :event_status, as: :select, label: t("companies.label.event_status"), collection: ['Aktif', 'Kapalı', 'İptal'] %>
        <%= f.input :description, label: t("companies.label.event_description")  %>
      </div>
    </div>
    <div id="event-source-div" class="row-fluid">
      <div class="span6">
        <%= f.input :event_source, as: :select, label: t("companies.label.event_source"), collection: ['Telefon', 'Mail', 'Sosyal Medya', 'Diğer'] %>
      </div>
      <div class="span6">
        <%= f.input :source_url, label: t("companies.label.event_source_url")  %>
      </div>
    </div>
  </fieldset>
</div>