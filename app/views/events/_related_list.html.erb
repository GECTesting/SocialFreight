<%= table_for objects, table_html: { class: "table table-condensed table-striped table-fixed"}, 
              header_row_html: { class: "headerRow" },
              row_html: { class: "dataRow" } do |table| %>
  <% table.column :action, column_html: { class: "actionCol", scope: "col" } do |event| %>
    <%= link_to t("defaults.link.edit"), edit_event_path(event) %> 
    | 
    <%= link_to t("defaults.link.destroy"), event, method: :delete, data: {confirm: t("defaults.messages.destroy_confirm")} %>              
  <% end %>
  <%# table.column :event_type, label: t("companies.label.event_type"), column_html: { scope: "col" } %>
  <% table.column :event_date, label: t("companies.label.event_date"), column_html: { scope: "col" } %>
  <% table.column :event_title, label: t("companies.label.event_title"), column_html: { scope: "col" } %>
  <%# table.column :event_source, label: t("companies.label.event_source"), column_html: { scope: "col" } %>
  <% table.column :description, label: t("companies.label.event_description"), column_html: { scope: "col" } %>

<% end %>