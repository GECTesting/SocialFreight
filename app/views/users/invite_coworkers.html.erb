<div class="row-fluid">

	<div class="page-header">
		<h4>Invite your co-workers</h4>
	</div>

	<div class="row-fluid">
		<%= form_for :user, url: create_coworkers_users_path, html: { method: :put, class: "form-horizontal" } do |form| %>  
      <% for user in @users %>
        <div class="control-group">
	        <label class="control-label">E-Mail:</label>
	        <div class="controls"><%= text_field_tag "user[][email]" %></div>
        </div>
      <% end %>
      <div class="form-actions">
        <%= submit_tag "Invite friends", class: "btn btn-success" %> 
      </div>
		<% end %>
	</div>
</div>