<%= simple_form_for @user, :validate => true  do |f| %>
  <%= f.error_notification %>

  <fieldset>
    <%= f.input :name %>
    <%= f.input :surname %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :patron_id, :collection => Patron.all, :prompt => "Choose a Company" %>
    <%= f.button :submit, :class => 'btn primary' %>
  </fieldset>

<% end %>
