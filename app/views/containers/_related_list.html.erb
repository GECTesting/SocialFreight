<%= table_for objects, table_html: { class: "table table-condensed table-striped table-fixed table-bordered"}, 
              header_row_html: { class: "headerRow" },
              row_html: { class: "dataRow" } do |table| %>
  <% table.column :action, column_html: { class: "actionCol", scope: "col" } do |container| %>
    <%= link_to t("defaults.link.edit"), edit_container_path(container) %> 
    | 
    <%= link_to t("defaults.link.destroy"), container, method: :delete, data: {confirm: t("defaults.messages.destroy_confirm")} %>              
  <% end %>
  <% table.column :container_type, label: t("containers.label.container_type"), column_html: { scope: "col" } %>
  <% table.column :name, label: t("containers.label.name"), column_html: { scope: "col" } %>
  <% table.column :sealno, label: t("containers.label.sealno"), column_html: { scope: "col" } %>
  <% table.column :free_day, label: t("containers.label.free_day"), column_html: { scope: "col" } %>
  <% table.column :demurrage, label: t("containers.label.demurrage"), column_html: { scope: "col" } do |container| %>
    <%= "#{container.demurrage} #{container.demurrage_curr}" %>
  <% end %>

<% end %>