<li class="media">
  <%= link_to (image_tag user_small_avatar(post.user), class: "media-object img-circle"), user_path(post.user), class: "pull-left" %>
  <div class="media-body">
    <h6 class="media-heading">
      <%= user_name(post.user) %>
      <span class="pull-right timeago" title="<%= post.created_at.round(0).iso8601(10) %>"></span>
    </h6>
    <p>
      <%= sanitize(auto_link(post.message)) %>
      <%#= link_to post.target_name, polymorphic_url(post.target), title: "#{post.target_type}: #{post.target_name}" if post.target_id %>
      <%= link_to post.target_name, "#", title: "#{post.target_type}: #{post.target_name}" if post.target_id %>
    </p>
  </div>
</li>