<div class="row-fluid">
  <fieldset>
    <legend>Durum Bilgisi</legend>
    <div class="row-fluid">
      <div class="span6">
        <%= f.input :company_id, as: :hidden, label: t("defaults.label.company"), input_html: {class: "chosen_input", "data-url" => "/companies.json", "data-newrecurl" => "/companies/new", "data-selected" => @case.company_id ? @case.company.name : ""} %>
        <%= f.input :case_type, as: :select, label: t("companies.label.case_type"), collection: ['Şikayet', 'Tebrik', 'Talep', 'Yorum', 'Diğer'] %>
        <%= f.input :case_date, as: :string, label: t("companies.label.case_date"), input_html: {class: "input-small", "data-datepicker" => "datepicker"} %>
      </div>
      <div class="span6">
        <%= f.input :case_status, as: :select, label: t("companies.label.case_status"), collection: ['Aktif', 'Kapalı', 'İptal'] %>
        <%= f.input :description, label: t("companies.label.case_description")  %>
      </div>
    </div>
    <div id="case-source-div" class="row-fluid">
      <div class="span6">
        <%= f.input :case_source, as: :select, label: t("companies.label.case_source"), collection: ['Telefon', 'Mail', 'Sosyal Medya', 'Diğer'] %>
      </div>
      <div class="span6">
        <%= f.input :source_url, label: t("companies.label.case_source_url")  %>
      </div>
    </div>
  </fieldset>
</div>