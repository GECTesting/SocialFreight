<div class="pageBody">
  <%= f.hidden_field :position, :value => @loading.position ? @loading.position.id : nil %>
  <%= f.hidden_field :operation %>

  <table style="width:100%" border="0" cellpadding="0" cellspacing="0">
    <tr class="subHeader"><td colspan="2"><h4>Operasyon Bilgileri</h4></td></tr>
    <tr>
      <%= f.input :direction, :as => :select, :collection => Position.direction_types.map { |r| [r[1], r[0] ] }, :include_blank => false, :input_html => { :class => "input-medium" } %>
      <%= f.input :paid_at, :as => :select, :collection => Position.payment_types.map { |r| [r[1], r[0] ] }, :include_blank => false, :input_html => { :class => "input-medium" } %>
    </tr>
    <tr>
      <%= f.input :incoterm, :as => :select, :collection => Loading.incoterms.map { |r| [r[1], r[0] ] }, :include_blank => false, :input_html => { :class => "input-medium" } %>
      <%= f.input :waybill_no, :input_html => { :class => "input-medium" } %>
    </tr>
    <tr>
      <%= f.input :branch, :as => :select, :collection => current_patron.branches, :include_blank => false, :input_html => { :class => "input-medium" } %>
      <%= f.input :load_type, :as => :select, :collection => Loading.load_types.map { |r| [r[1], r[0] ] }, :label => "Yük Tipi", :include_blank => false, :input_html => { :class => "input-medium" } %>
    </tr>
    <tr class="subHeader"><td colspan="2"><h4>Yükleme Bilgileri</h4></td></tr>
    <tr>
      <%= f.input :position_name, :input_html => {:class => "medium disabled", :disabled => ""}, :label => "Position" %>
      <%= f.input :company, :input_html => {:class => "lookup_input", "data-url" => "/companies.json", "data-pre" => @loading.company ? @loading.company.to_s : nil }, :label => "Customer" %>
    </tr>
    <tr>
      <%= f.input :brut_wg, :label => "Brüt Ağırlık" do %>
        <%= f.input_field :brut_wg, :class => "input-small" %>&nbsp;KG
        <%#= f.input_field :wg_type, :as => :select, :collection => Loading.weight_types.map { |r| [r[1], r[0] ] }, :class => "small" %>
      <% end %>
      <%= f.input :freight_price do %>
        <%= f.input_field :freight_price, :class => "input-small" %>
        <%= f.input_field :freight_curr, :as => :select, :collection => Currency.all, :include_blank => false, :class => "input-medium" %>
      <% end %>
    </tr>
    <tr>
      <%= f.input :commodity, :as => :text, :input_html => {:rows => 1}, :label => "Yük İçeriği" %>
      <%= f.input :marks_nos, :as => :text, :input_html => {:rows => 1}, :label => "Marks & Nos" %>
    </tr>
  </table>
</div>
