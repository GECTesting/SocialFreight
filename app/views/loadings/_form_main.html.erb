<fieldset>
  <div class="row">
    <%= f.hidden_field :position, :value => @loading.position ? @loading.position.id : nil %>
    <%= f.hidden_field :operation %>
    <div class="span8 columns">
      <%= f.input :operation, :label => "Operation/Incoterm" do %>
        <%= f.input_field :direction, :as => :select, :collection => Position.direction_types.map { |r| [r[1], r[0] ] }, :class => "small" %>
        <%= f.input_field :paid_at, :as => :select, :collection => Position.payment_types.map { |r| [r[1], r[0] ] }, :class => "small" %>
        <%= f.input_field :incoterm, :as => :select, :collection => Loading.incoterms.map { |r| [r[1], r[0] ] }, :class => "small" %>
      <% end %>
    </div>
    <div class="span8 columns">
      <div class="clearfix">
        <label>Position Reference</label>
        <%= f.input_field :position_name, :class => "medium"%>
        <%= f.input_field :branch, :as => :select, :collection => current_patron.branches, :include_blank => false, :class => "medium" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="page-header span16 columns">
      <h4></h4>
    </div>
    <div class="span8 columns">
      <%= f.input :company, :input_html => {:class => "token_input", "data-url" => "/companies.json", "data-pre" => @loading.company ? @loading.company.prepopulate_tokens.to_json : nil }, :label => "Customer" %>
      <%= f.input :sender, :input_html => {:class => "token_input", "data-url" => "/companies.json", "data-pre" => @loading.sender ? @loading.sender.prepopulate_tokens.to_json : nil } %>
    </div>
    <div class="span8 columns">
      <%= f.input :consignee, :input_html => {:class => "token_input", "data-url" => "/companies.json", "data-pre" => @loading.consignee ? @loading.consignee.prepopulate_tokens.to_json : nil } %>
      <%= f.input :agent, :input_html => {:class => "token_input", "data-url" => "/companies.json", "data-pre" => @loading.agent ? @loading.agent.prepopulate_tokens.to_json : nil } %>
    </div>
    <div class="span8 columns">
      <%= f.input :brut_wg, :label => "Yük Tipi/Ağırlığı" do %>
        <%= f.input_field :load_type, :as => :select, :collection => Loading.load_types.map { |r| [r[1], r[0] ] }, :class => "small" %>
        <%= f.input_field :brut_wg, :class => "small" %>
      <% end %>
      <%= f.input :freight_price do %>
        <%= f.input_field :freight_price, :class => "small" %>
        <%= f.input_field :freight_curr, :as => :select, :collection => Currency.all, :include_blank => false, :class => "medium" %>
      <% end %>
    </div>
    <div class="span8 columns">
      <%= f.input :product_price do %>
        <%= f.input_field :product_price, :class => "small" %>
        <%= f.input_field :product_curr, :as => :select, :collection => Currency.all, :include_blank => false, :class => "medium" %>
      <% end %>
      <%= f.input :commodity, :as => :text, :input_html => {:rows => 1, :cols => 37} %>     
    </div>
  </div>
  <div class="row">
    <div class="page-header span16 columns">
      <h4></h4>
    </div>
    <div class="span8 columns">
      <h5>Yükleme Adresi</h5>
      <%= f.input :departure_country, :as => :select, :collection => Country.all, :include_blank => false, :input_html => {:class => "large"} %>
      <%= f.input :departure_city, :input_html => {:class => "token_input", "data-url" => "/cities.json", "data-pre" => @loading.departure_city ? @loading.departure_city.prepopulate_tokens.to_json : nil} %>
      <%= f.input :load_place, :input_html => {:class => "token_input", "data-url" => "/places.json", "data-pre" => @loading.load_place ? @loading.load_place.prepopulate_tokens.to_json : nil} %>
      <%= f.input :departure_district, :label => "Semt" do %>
        <%= f.input_field :departure_district, :class => "medium" %>
        <%= f.input_field :departure_postcode, :class => "small" %>
      <% end %>
      <%= f.input :departure_address, :as => :text, :input_html => {:rows => 1, :cols => 37} %>
      <%= f.input :pickup_date, :label => "Prepared/Load Date", :input_html => {:class => "inline-inputs"} do %>
       <%= f.input_field :pickup_date, :class => "small", "data-datepicker" => "datepicker" %>
       <%= f.input_field :load_date, :class => "small", "data-datepicker" => "datepicker" %>
      <% end %>
     </div>
    <div class="span8 columns">
      <h5>Boşaltma Adresi</h5>
      <%= f.input :arrival_country, :as => :select, :collection => Country.all, :include_blank => false, :input_html => {:class => "large"} %>
      <%= f.input :arrival_city, :input_html => {:class => "token_input", "data-url" => "/cities.json", "data-pre" => @loading.departure_city ? @loading.departure_city.prepopulate_tokens.to_json : nil} %>
      <%= f.input :unload_place, :input_html => {:class => "token_input", "data-url" => "/places.json", "data-pre" => @loading.load_place ? @loading.load_place.prepopulate_tokens.to_json : nil} %>
      <%= f.input :arrival_district, :label => "Semt" do %>
        <%= f.input_field :arrival_district, :class => "medium" %>
        <%= f.input_field :arrival_postcode, :class => "small" %>
      <% end %>
      <%= f.input :arrival_address, :as => :text, :input_html => {:rows => 1, :cols => 37} %>
      <%= f.input :unload_date, :input_html => {:class => "small", "data-datepicker" => "datepicker"} %>
    </div>
  </div>
  <div class="row">
    <div class="page-header span16 columns">
      <h4></h4>
    </div>
   </div>
</fieldset>
