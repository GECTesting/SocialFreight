<div class="row-fluid">
  <div class="span1">
    <%= image_tag("/assets/loading.png") %>
  </div>
  <div class="span9">
    <div class="row-fluid">
      <%= render 'loadings/tab_header', loading: loading %>
    </div>
    <div class="row-fluid">
      <dl class="yatay-info" id="headline">
        <dd><strong><%= company_name(loading.company) if loading.company %></strong></dd>
        <dd><%= loading_freight_price(loading) %></dd>
        <dt></dt>
        <dd><%= loading.commodity %></dd>
      </dl>
    </div>
  </div>
  <div class="span2">
    <div class="pull-right">
      <% if loading.position_id.nil? %>
        <%= link_to t("operations.label.reservation"), transplan_path(:select_loads, :loading_id => loading.id), class: 'btn btn-info btn-mini', title: "Taşımayı Planlamak için Tıklayınız" %>
      <% else %>
        <%= link_to position_name(loading.position), position_path(loading.position) %>
      <% end %>
    </div>
  </div>
</div>