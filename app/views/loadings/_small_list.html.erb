<%= table_for objects, table_html: { class: "table table-condensed table-striped table-fixed"}, 
              header_row_html: { class: "headerRow" },
              row_html: { class: "dataRow" } do |table| %>
  <% table.column :reference, column_html: { scope: "col" } do |loading| %>
    <%= link_to loading.reference, loading_path(loading) %>
  <% end %>  
  <% table.column :company, column_html: { scope: "col" } do |loading| %>
    <%= link_to loading.company.name, company_path(loading.company) %>
  <% end %>
  <% table.column :load_coun, column_html: { class: "phoneCol", scope: "col" } %>
  <% table.column :unload_coun, column_html: { class: "phoneCol", scope: "col" } %>
  <%# table.column :freight_price, column_html: { scope: "col" } do |loading| %>
    <%#= "#{loading.freight_price} #{loading.freight_curr}" %>
  <%# end %>
  <% table.column :commodity, column_html: { scope: "col"} %>
  <% table.column :action, label: "", column_html: { class: "actionCol", scope: "col" } do |loading| %>
    <%= link_to edit_loading_path(loading) do %><i class="icon-edit"></i><% end %>            
  <% end %>
<% end %>