<div class="row-fluid">
  <fieldset>
    <legend><%= t("operations.title.loading_detail") %></legend>
    <div class="row-fluid">
    <div class="span6">
      <%= f.input :sender_id, as: :hidden, label: t("defaults.label.sender"), input_html: {class: "chosen_input", "data-url" => "/companies.json", "data-newrecurl" => "/companies/new", "data-placeholder" => t("operations.placeholder.sender") } %>
      <%= f.input :consignee_id, as: :hidden, label: t("defaults.label.consignee"), input_html: {class: "chosen_input", "data-url" => "/companies.json", "data-newrecurl" => "/companies/new", "data-placeholder" => t("operations.placeholder.consignee") } %>
      <%= f.input :agent_id, as: :hidden, label: t("defaults.label.agent"), input_html: {class: "chosen_input", "data-url" => "/companies.json", "data-newrecurl" => "/companies/new", "data-placeholder" => t("operations.placeholder.agent") } %>
      <%= f.input :category, as: :select, label: t("operations.label.category"), collection: Nimbos::Listitem.sectors.map { |t| [t.name, t.code] }, include_blank: true %>
      <%#= f.input :bank_flag, label: t("operations.label.bank_flag") %>
      <%= f.input :bank, label: t("operations.label.bank") %>
    </div>
    <div class="span6">
      <%= f.input :branch_id, as: :select, label: t("defaults.label.branch"), collection: current_patron.branches, include_blank: false, selected: current_user.branch_id %>
      <%= f.input :producer, label: t("operations.label.producer") %>
      <%= f.input :product_price, label: t("operations.label.product_price") do %>
        <%= f.input_field :product_price, class: "input-small" %>
        <%= f.input_field :product_curr, as: :select, collection: Nimbos::Currency.all, include_blank: false, class: "input-small" %>
      <% end %>
      <%= f.input :marks_nos, as: :text, input_html: { rows: 2 }, label: t("operations.label.marks_nos") %>
    </div>
    </div>
  </fieldset>
</div>
