<div class="row-fluid">

  <div class="page-header">
    <h4><%= t("packages.title.package_info") %></h4>
  </div>

  <div class="row-fluid">
    <div class="span6">
      <fieldset>
        <%= f.input :total, label: t("packages.label.total") do %>
          <%= f.input_field :total, class: "input-mini50" %>
          <%= f.input_field :pack_type, class: "input-medium" %>
          <%#= f.input_field :pack_type, as: :select, collection: Package.pack_types.map { |r| [r[1], r[0] ] }, class: "input-medium" %>
        <% end %>
        <%= f.input :dimension1, label: t("packages.label.dimension") do %>
          <%= f.input_field :dimension1, class: "input-mini50" %>X
          <%= f.input_field :dimension2, class: "input-mini50" %>X
          <%= f.input_field :dimension3, class: "input-mini50" %>
        <% end %>
        <%= f.input :brutwg, label: t("packages.label.weights") do %>
          <%= f.input_field :brutwg, class: "input-small" %>
          <%= f.input_field :netwg,  class: "input-small" %>
        <% end %>
        <%#= f.input :volume, label: t("packages.label.volume_lada") do %>
          <%#= f.input_field :volume, class: "input-small" %>
          <%#= f.input_field :lada,  class: "input-small" %>
        <%# end %>
        <%= f.input :description, as: :text, input_html: { rows: "2" }, label: t("packages.label.description") %>
      </fieldset>
    </div>
    <div class="span6">
      <fieldset>
        <%= f.input :imo, label: t("packages.label.imo") %>
        <%= f.input :gtip, label: t("packages.label.gtip") %>
        <%= f.input :po, label: t("packages.label.po") %>
        <%#= f.input :container_no, label: t("packages.label.container_no"), placeholder: t("packages.placeholder.container_no") %>
        <%= f.input :loading_notes, as: :text, input_html: { rows: "2" }, label: t("packages.label.loading_notes") %>
      </fieldset>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, t("packages.action.save"), class: 'btn btn-primary' %>
    <a href="#" class="btn"><%= t("defaults.link.cancel") %></a>
  </div>

  <%= f.hidden_field :packed_type %>
  <%= f.hidden_field :packed_id %>

</div>
