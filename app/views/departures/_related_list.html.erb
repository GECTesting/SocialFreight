<%= table_for objects, table_html: { class: "table table-condensed table-striped"}, 
              header_row_html: { class: "headerRow" },
              row_html: { class: "dataRow" } do |table| %>
  <% table.column :action, column_html: { class: "actionCol", scope: "col" } do |departure| %>
    <%= link_to "GÃ¼ncelle", edit_departure_path(departure) %> 
    | 
    <%= link_to "Sil", departure, method: :delete, confirm: "Are you sure?" %>
  <% end %>
  <% table.column :load_date, column_html: { class: "dateCol", scope: "col" } do |departure| %>
    <%= departure.load_date.strftime("%d/%m/%Y") if departure.load_date %>
  <% end %>
  <% table.column :country, column_html: { scope: "col" } do |departure| %>
    <%= departure.country.name if departure.country %>
  <% end %>
  <% table.column :city, column_html: { scope: "col" } do |departure| %>
    <%= departure.city.name if departure.city %>
  <% end %>
  <% table.column :load_place, column_html: { scope: "col" } do |departure| %>
    <%= departure.load_place.name if departure.load_place %>
  <% end %>
  <% table.column :statement, column_html: { scope: "col" } %>
  <% table.column :statement_date, column_html: { class: "dateCol", scope: "col" }, label: "State.Date" %>
  <% table.column :pickup_date, column_html: { class: "dateCol", scope: "col" } do |departure| %>
    <%= departure.pickup_date.strftime("%d/%m/%Y") if departure.pickup_date %>
  <% end %>
<% end %>