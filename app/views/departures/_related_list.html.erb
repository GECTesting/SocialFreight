<%= table_for objects, table_html: { class: "table table-condensed table-striped table-fixed"}, 
              header_row_html: { class: "headerRow" },
              row_html: { class: "dataRow" } do |table| %>
  <% table.column :action, label: t("defaults.link.action"), column_html: { class: "actionCol", scope: "col" } do |departure| %>
    <%= link_to t("defaults.link.edit"), edit_departure_path(departure) %> 
    | 
    <%= link_to t("defaults.link.destroy"), departure, method: :delete, data: {confirm: t("defaults.messages.destroy_confirm")} %>
  <% end %>
  <% table.column :load_date, label: t("defaults.label.load_date"), column_html: { class: "dateCol", scope: "col" } do |departure| %>
    <%= departure.load_date.strftime("%d/%m/%Y") if departure.load_date %>
  <% end %>
  <% table.column :country_id, label: t("defaults.label.load_country"), column_html: { scope: "col" } do |departure| %>
    <%= departure.country.name if departure.country %>
  <% end %>
  <% table.column :load_city, label: t("defaults.label.load_city"), column_html: { scope: "col" } %>
  <% table.column :load_place, label: t("defaults.label.load_place"), column_html: { scope: "col" } %>
  <%# table.column :load_place, column_html: { scope: "col" } do |departure| %>
    <%#= departure.load_place.name if departure.load_place %>
  <%# end %>
  <% table.column :customofficer_id, label: t("operations.label.customofficer"), column_html: { scope: "col" } do |departure| %>
    <%= departure.customofficer.name if departure.customofficer %>
  <% end %>
  <% table.column :statement, label: t("operations.label.settlement_info"), column_html: { scope: "col" } do |departure| %>
    <%= "#{departure.statement} - #{departure.statement_date}" %>
  <% end %>
  <% table.column :pre_trans, label: t("operations.label.pre_trans") do |departure| %>
    <%= departure.pre_trans == true ? t("defaults.vocabulary.yes") : t("defaults.vocabulary.no") %>
  <% end %>
  <% table.column :pickup_date, label: t("defaults.label.pickup_date"), column_html: { class: "dateCol", scope: "col" } do |departure| %>
    <%= departure.pickup_date.strftime("%d/%m/%Y") if departure.pickup_date %>
  <% end %>
<% end %>