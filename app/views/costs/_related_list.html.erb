<%= table_for objects, table_html: { class: "table table-condensed table-striped table-fixed"}, 
              header_row_html: { class: "headerRow" },
              row_html: { class: "dataRow" } do |table| %>
  <% table.column :action, column_html: { class: "actionCol", scope: "col" } do |cost| %>
    <%= link_to "GÃ¼ncelle", edit_cost_path(cost) %> 
    | 
    <%= link_to "Sil", cost, method: :delete, data: {confirm: "Are you sure?"} %>
  <% end %>
  <% table.column :created_at, column_html: { class: "dateCol", scope: "col" } do |cost| %>
    <%= cost.created_at.strftime("%d/%m/%Y") %>
  <% end %>
  <% table.column :cost_type, column_html: { class: "dateCol", scope: "col" } %>
  <% table.column :cost_price, column_html: { scope: "col" } do |cost| %>
    <%= "#{cost.cost_price} #{cost.price_curr}" %>
  <% end %>
  <% table.column :cost_vat, column_html: { scope: "col" } %>
  <% table.column :document_no, column_html: { scope: "col" } %>
  <% table.column :document_date, column_html: { class: "dateCol", scope: "col" }, label: "Doc.Date" %>
  <% table.column :country, column_html: { scope: "col" } do |cost| %>
    <%= cost.country.name if cost.country %>
  <% end %>
  <% table.column :city, column_html: { scope: "col" } do |cost| %>
    <%= cost.city.name if cost.city %>
  <% end %>
<% end %>