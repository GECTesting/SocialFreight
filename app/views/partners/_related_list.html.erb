<%= table_for objects, table_html: { class: "table table-condensed table-striped table-fixed table-bordered"}, 
              header_row_html: { class: "headerRow" },
              row_html: { class: "dataRow" } do |table| %>
  <% table.column :action, column_html: { class: "actionCol", scope: "col" } do |partner| %>
    <%= link_to t("defaults.link.edit"), edit_partner_path(partner) %> 
    | 
    <%= link_to t("defaults.link.destroy"), partner, method: :delete, data: {confirm: "Are you sure?"} %>
  <% end %>
  <% table.column :partner, label: t("companies.label.partner"), column_html: { scope: "col" } do |partner| %>
    <%= partner.partner.name %>
  <% end %>
  <% table.column :partner_type, label: t("companies.label.partner_type"), column_html: { scope: "col" } %>
  <% table.column :notes, label: t("defaults.label.notes"), column_html: { scope: "col" } %>

<% end %>