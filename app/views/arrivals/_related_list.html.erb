<%= table_for objects, table_html: { class: "table table-condensed table-striped table-fixed"}, 
              header_row_html: { class: "headerRow" },
              row_html: { class: "dataRow" } do |table| %>
  <% table.column :action, label: t("defaults.link.action"), column_html: { class: "actionCol", scope: "col" } do |arrival| %>
    <%= link_to t("defaults.link.edit"), edit_arrival_path(arrival) %> 
    | 
    <%= link_to t("defaults.link.destroy"), arrival, method: :delete, data: {confirm: t("defaults.messages.destroy_confirm")} %>
  <% end %>
  <% table.column :unload_date, label: t("operations.label.unload_date"), column_html: { class: "dateCol", scope: "col" } do |arrival| %>
    <%= arrival.unload_date.strftime("%d/%m/%Y") if arrival.unload_date %>
  <% end %> 
  <% table.column :country_id, label: t("defaults.label.unload_country"), column_html: { scope: "col" } do |arrival| %>
    <%= arrival.country.name if arrival.country %>
  <% end %>
  <% table.column :unload_city, label: t("defaults.label.unload_city"), column_html: { scope: "col" } %>
  <% table.column :unload_place, label: t("defaults.label.unload_place"), column_html: { scope: "col" } %>
  <%# table.column :unload_place, column_html: { scope: "col" } do |arrival| %>
    <%#= arrival.unload_place.name if arrival.unload_place %>
  <%# end %>
  <% table.column :customofficer_id, label: t("operations.label.customofficer"), column_html: { scope: "col" } do |arrival| %>
    <%= arrival.customofficer.name if arrival.customofficer %>
  <% end %>
  <% table.column :statement, label: t("operations.label.settlement_info"), column_html: { scope: "col" } do |arrival| %>
    <%= "#{arrival.statement} - #{arrival.statement_date}" %>
  <% end %>
  <% table.column :post_trans, label: t("operations.label.post_trans") do |arrival| %>
    <%= arrival.post_trans == true ? t("defaults.vocabulary.yes") : t("defaults.vocabulary.no") %>
  <% end %>
  <% table.column :delivery_date, label: t("defaults.label.delivery_date"), column_html: { class: "dateCol", scope: "col" } %>

<% end %>